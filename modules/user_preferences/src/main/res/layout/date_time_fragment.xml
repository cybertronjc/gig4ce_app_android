<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg"
    tools:context="com.gigforce.user_preferences.daytime.DayTimeFragment">

    <com.gigforce.common_ui.components.cells.AppBar
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundType="WhiteBar"
        android:minHeight="@dimen/size_56"
        app:titleText="@string/day_and_time_pref"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="23dp"
        android:minHeight="56dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:tint="@color/black"
              app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="19dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/day_and_time_pref"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:letterSpacing="0"
            app:layout_constraintStart_toEndOf="@+id/back_arrow_iv"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>



    <View
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="28dp"
        android:background="@color/gray_color1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar" />

    <View
        android:id="@+id/textView49"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/textView47"
        tools:layout_editor_absoluteX="-16dp" />

    <ImageView
        android:id="@+id/editCurrentLocation"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView49"
        app:layout_constraintTop_toTopOf="@+id/textView49"
          app:srcCompat="@drawable/ic_calendar_black" />

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weekday_pref"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:letterSpacing="0"
        app:layout_constraintStart_toStartOf="@+id/textView49"
        app:layout_constraintTop_toTopOf="@+id/textView49" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_00_04days_pref"
        android:textColor="@color/gray_color"
        android:textSize="10sp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/lato"
        android:letterSpacing="0"
        app:layout_constraintStart_toStartOf="@+id/textView49"
        app:layout_constraintTop_toBottomOf="@+id/textView50" />

    <Switch
        android:id="@+id/workFromHomeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:theme="@style/Theme.switchButton"
        app:layout_constraintBottom_toBottomOf="@+id/textView49"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView49" />

    <View
        android:id="@+id/textView53"
        android:layout_width="3dp"
        android:layout_height="24dp"
        android:background="@color/gray_color1"
        android:layout_marginRight="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView49"
        app:layout_constraintEnd_toStartOf="@+id/workFromHomeSwitch"
        app:layout_constraintTop_toBottomOf="@+id/textView47" />

    <View
        android:id="@+id/textView54"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_color1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView49" />

    <View
        android:id="@+id/textView55"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/textView54"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
          app:srcCompat="@drawable/ic_calendar_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView55" />

    <TextView
        android:id="@+id/textView56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:text="@string/weekends_pref"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="0"
        app:layout_constraintStart_toStartOf="@+id/textView55"
        app:layout_constraintTop_toTopOf="@+id/textView55" />

    <TextView
        android:id="@+id/textView57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:text="@string/no_pref"
        android:textColor="@color/gray_color"
        android:textSize="10sp"
        android:letterSpacing="0"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="@+id/textView55"
        app:layout_constraintTop_toBottomOf="@+id/textView56" />

    <Switch
        android:id="@+id/arroundCurrentAddSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:theme="@style/Theme.switchButton"
        app:layout_constraintBottom_toBottomOf="@+id/textView55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView55" />

    <View
        android:id="@+id/textView58"
        android:layout_width="3dp"
        android:layout_height="24dp"
        android:background="@color/gray_color1"
        android:layout_marginRight="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView55"
        app:layout_constraintEnd_toStartOf="@+id/arroundCurrentAddSwitch"
        app:layout_constraintTop_toTopOf="@+id/textView55" />
</androidx.constraintlayout.widget.ConstraintLayout>