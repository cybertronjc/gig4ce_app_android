<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_what"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_what"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginTop="@dimen/size_24"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_what_client_activation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_27"
            android:layout_marginEnd="@dimen/size_43"
            android:background="@color/fui_transparent"
            android:paddingStart="@dimen/size_9"
            android:paddingEnd="@dimen/size_9"
            android:textColor="#000000"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />
    </LinearLayout>

    <com.gigforce.core.utils.ReadMoreTextView
        android:id="@+id/tv_what_value_client_activation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_19"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_13"
        android:textColor="#000000"
        android:textSize="@dimen/font_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_what"
        app:trimLines="4"
        tools:text="As the public face of the company the Sales Associate is responsible for dealing with any and all customer questions about the products and services the company offers. A Sales Associate is expected to be" />
</androidx.constraintlayout.widget.ConstraintLayout>