<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".client_activation.info.BusinessLocationHubFragment">

    <com.gigforce.common_ui.components.cells.AppBar
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundType="PinkBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="Hub selection" />

    <AutoCompleteTextView
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46"
        android:hint="State"
        android:layout_marginTop="@dimen/size_16"
        android:paddingStart="@dimen/size_6"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_16"
        android:background="@drawable/rect_outline_lipstick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar"/>


    <AutoCompleteTextView
        android:id="@+id/hub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46"
        android:hint="Hub name"
        android:paddingStart="@dimen/size_6"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginTop="@dimen/size_16"
        android:background="@drawable/rect_outline_lipstick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/state"/>

    <TextView
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_22"
        android:background="@drawable/submit_button_selector"
        android:gravity="center"
        android:minHeight="@dimen/size_36"
        android:text="Submit"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>