<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="1dp"
    app:strokeColor="#15888888"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="28dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="How do I set a monthly goal?"
            style="@style/LatoRegular14Black"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp"
            android:drawableEnd="@drawable/ic_baseline_forward_24"
            android:drawableTint="#c7c7cc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/answer_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="You can always manage your monthly..."
            style="@style/LatoRegular14Black"
            android:textColor="#888888"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>