<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainverification.VerificationMainFragment">

    <com.gigforce.common_ui.components.cells.AppBar
        android:id="@+id/appBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundType="PinkBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="@string/document_verification" />

    <TextView
        android:id="@+id/textView4"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_sm1"
        android:layout_marginTop="@dimen/dp_xl3"
        android:text="@string/submit_docs_veri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar2" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_sm1"
        android:layout_marginTop="@dimen/dp_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:src="@drawable/ic_baseline_help_filled_24"/>

    <TextView
        android:id="@+id/textView6"
        style="@style/Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_sm3"
        android:layout_marginRight="@dimen/dp_xl6"
        android:text="@string/need_to_verify_your_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <com.gigforce.common_ui.components.atoms.GrayLine
        android:id="@+id/grayLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_large"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/iconwhyweneed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_sm1"
        android:visibility="gone"
        android:src="@drawable/ic_question_mark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_xsm1"
        android:visibility="gone"
        android:text="Why we need this"
        style="@style/Caption1"
        app:layout_constraintEnd_toStartOf="@+id/iconwhyweneed"
        app:layout_constraintTop_toTopOf="@+id/iconwhyweneed" />

    <TextView
        android:id="@+id/textView7"
        style="@style/Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_sm1"
        android:layout_marginTop="@dimen/dp_large"
        android:layout_marginRight="@dimen/dp_xl2"
        android:visibility="gone"
        android:text="Select the documents that you feel are ready to submit."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grayLine" />

    <com.gigforce.core.recyclerView.CoreRecyclerView
        android:id="@+id/allDocsRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_sm3"
        android:layout_marginTop="@dimen/dp_large"
        android:layout_marginRight="@dimen/dp_sm3"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginBottom="@dimen/dp_sm3"/>

    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/button_style"
        android:text="@string/next_veri"
        android:padding="@dimen/dp_sm1"
        android:layout_marginBottom="@dimen/dp_xl1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dp_sm3"
        />
</androidx.constraintlayout.widget.ConstraintLayout>