<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gigforce.common_ui.components.cells.AppBar
        android:id="@+id/appBarAadharOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundType="PinkBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="Aadhar Card" />

    <TextView
        android:id="@+id/textView"
        style="@style/Caption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_sm1"
        android:layout_marginTop="@dimen/dp_xl1"
        android:text="You need to upload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarAadharOption"/>

    <TextView
        android:id="@+id/textView2"
        style="@style/Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_xsm1"
        android:text="Aadhaar Card"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <ImageView
        android:id="@+id/iconwhyweneed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_sm1"
        android:src="@drawable/ic_ques_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_xsm1"
        android:text="Why we need this"
        app:layout_constraintEnd_toStartOf="@+id/iconwhyweneed"
        app:layout_constraintTop_toTopOf="@+id/iconwhyweneed" />

    <com.gigforce.common_ui.components.atoms.GrayLine
        android:id="@+id/grayLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView8"
        style="@style/Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_sm1"
        android:layout_marginRight="@dimen/dp_sm1"
        android:layout_marginTop="@dimen/dp_large"
        android:text="Select the method you want for verifying your Aadhaar Card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grayLine2" />

    <com.gigforce.common_ui.components.cells.SimpleCardComponent
        android:id="@+id/upload_adhaar_Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_sm1"
        app:title="Upload Aadhaar Card Photo"
        app:caption="Takes about 45 seconds"
        app:layout_constraintEnd_toEndOf="@id/textView8"
        app:layout_constraintStart_toStartOf="@id/textView8"
        app:layout_constraintTop_toBottomOf="@id/textView8" />

    <TextView
        android:id="@+id/or_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        style="@style/Caption2"
        android:layout_marginTop="@dimen/dp_xsm1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upload_adhaar_Card"/>

    <com.gigforce.common_ui.components.cells.SimpleCardComponent
        android:id="@+id/phone_number_aadhaar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_xsm1"
        app:title="Verify using Phone Number"
        app:caption="Requires OTP Verification, Takes ~2 min"
        app:layout_constraintEnd_toEndOf="@id/textView8"
        app:layout_constraintStart_toStartOf="@id/textView8"
        app:layout_constraintTop_toBottomOf="@id/or_tv" />

    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/button_style"
        android:text="Next Step"
        android:padding="@dimen/dp_sm1"
        android:layout_marginBottom="@dimen/dp_xl1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dp_sm3"
        android:clickable="true"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>