<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_green_tick"
        android:layout_marginTop="@dimen/dp_xl4"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_mid"
        android:layout_marginBottom="@dimen/dp_xl6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintBottom_toTopOf="@+id/okay_bn_bs">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/certificate_downloaded_veri"
            style="@style/primary_color_heading2_bs"
            android:layout_gravity="center"/>

<!--        <TextView-->
<!--            android:id="@+id/textView15"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/successfully_veri"-->
<!--            style="@style/primary_color_heading2_bs"-->
<!--            android:layout_gravity="center"/>-->
    </LinearLayout>

    <TextView
        android:id="@+id/okay_bn_bs"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_mid"
        android:layout_marginRight="@dimen/dp_mid"
        android:layout_marginBottom="@dimen/dp_mid"
        android:text="@string/okay_veri"
        android:textAllCaps="true"
        style="@style/primary_button_style"/>

</androidx.constraintlayout.widget.ConstraintLayout>