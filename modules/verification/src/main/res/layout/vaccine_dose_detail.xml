        <TextView
            android:id="@+id/vaccinationstatus_label"
            style="@style/dialog_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_xl4"
            android:layout_marginTop="@dimen/dp_sm4"
            android:text="@string/vaccinationstatus_veri"
            app:layout_constraintEnd_toStartOf="@+id/guidline"
            app:layout_constraintStart_toStartOf="parent"
