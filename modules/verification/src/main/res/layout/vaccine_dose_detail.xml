        <TextView
            android:id="@+id/colon7"
            style="@style/section_value_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  :  "
            app:layout_constraintStart_toEndOf="@+id/guidline"
