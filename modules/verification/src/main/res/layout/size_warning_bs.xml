<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/doc_user_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_doc_user_group"
        android:layout_marginTop="@dimen/dp_xl4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_mid"
        android:layout_marginTop="@dimen/dp_mid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doc_user_iv"
        android:text="@string/file_size_too_big_veri"
        style="@style/primary_color_heading_bs"/>


    <TextView
        android:id="@+id/subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_mid"
        android:layout_marginTop="@dimen/dp_mid"
        android:layout_marginBottom="@dimen/dp_xl4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintBottom_toTopOf="@+id/try_again_bn_bs"
        android:text="@string/file_size_message_veri"
        style="@style/primary_color_heading_bs"/>

    <TextView
        android:id="@+id/try_again_bn_bs"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cancel_doc_button"
        android:layout_marginLeft="@dimen/dp_mid"
        android:layout_marginRight="@dimen/dp_mid"
        android:layout_marginBottom="@dimen/dp_mid"
        android:text="@string/try_again_veri"
        android:textAllCaps="true"
        style="@style/primary_button_style"/>

    <Button
        android:id="@+id/cancel_doc_button"
        android:layout_width="0dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="@dimen/dp_mid"
        android:layout_marginRight="@dimen/dp_mid"
        android:layout_marginBottom="@dimen/dp_mid"
        style="@style/ActionOutlineButtonStyle"
        android:textAllCaps="true"
        android:text="@string/cancel_veri"/>

</androidx.constraintlayout.widget.ConstraintLayout>