<?xml version="1.0" encoding="utf-8"?>

<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/reason_root_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/background_card_no_effect"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/selected_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_unselect_tick" />

        <TextView
            android:id="@+id/reason_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:ellipsize="marquee"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:lineSpacingExtra="3sp"
            android:textAppearance="@style/style_h6"
            tools:text="Bangalore" />

    </LinearLayout>
</layout>