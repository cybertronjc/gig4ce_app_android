<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:elevation="0dp"
        android:translationZ="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        android:visibility="gone"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/quick_actions_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_bold"
                android:lineHeight="@dimen/size_24"
                android:layout_marginTop="@dimen/size_40"
                android:layout_marginStart="@dimen/size_20"
                android:text="Quick Actions"/>


            <LinearLayout
                android:id="@+id/layoutAttachmentQuickActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/size_20"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/all_actions_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_bold"
                android:lineHeight="@dimen/size_24"
                android:layout_marginTop="@dimen/size_40"
                android:layout_marginStart="@dimen/size_20"
                android:text="All Actions"/>

            <LinearLayout
                android:id="@+id/layoutAttachmentAllActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/size_40"
                android:layout_marginTop="@dimen/size_20"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actionsFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorPrimary"
        android:elevation="4dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_action_attachment_fab"
        app:tint="@android:color/white"
        android:visibility="visible" />

</LinearLayout>
</layout>