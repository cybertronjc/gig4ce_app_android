<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size128">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/lato"
                android:text="Experience"
                android:textColor="#131415"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView5">

                <TextView
                    android:id="@+id/working_status"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#f4faff"
                    android:fontFamily="@font/lato"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/size16"
                    android:text="Are You currently working?"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/currently_working_option"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/rect_light_blue_fill"
                    android:padding="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/working_status">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/imageTextCardMol"
                        android:layout_width="0dp"
                        android:layout_height="109dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/rect_left_cornor_card"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageTextCardMol3"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/ic_chat"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/option"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/lato"
                            android:letterSpacing="0"
                            android:text="Working"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/icon" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/imageTextCardMol3"
                        android:layout_width="0dp"
                        android:layout_height="109dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/rect_right_cornor_card"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/imageTextCardMol"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/ic_chat"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/option2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/lato"
                            android:letterSpacing="0"
                            android:text="Not Working"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/icon2" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/working_experience_status"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/size16"
                    android:background="#f4faff"
                    android:fontFamily="@font/lato"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/size16"
                    android:text="Your Total Work Experience"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/currently_working_option" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/working_experience_status">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        style="@style/Theme.RadioButtonLipstickPink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size16"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/size16"
                        android:text="No Experience"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        style="@style/Theme.RadioButtonLipstickPink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size16"
                        android:layout_marginTop="@dimen/size16"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/size16"
                        android:text="0-1 Years"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        style="@style/Theme.RadioButtonLipstickPink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size16"
                        android:layout_marginTop="@dimen/size16"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/size16"
                        android:text="1-3 Years"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        style="@style/Theme.RadioButtonLipstickPink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size16"
                        android:layout_marginTop="@dimen/size16"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/size16"
                        android:text="3-5 Years"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        style="@style/Theme.RadioButtonLipstickPink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size16"
                        android:layout_marginTop="@dimen/size16"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/size16"
                        android:text="5+ Years"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                </RadioGroup>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>