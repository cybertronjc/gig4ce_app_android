<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imageTextCardcl"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/rect_top_left_cornor_card"
        app:layout_constraintEnd_toStartOf="@+id/imageTextCardcl_"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_chat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/interest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato"
            android:letterSpacing="0"
            android:text="Male"
            android:textColor="#2e2f30"
            android:textSize="12sp"
            android:singleLine="true"
            android:maxLength="20"
            android:ellipsize="marquee"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_iv" />


    </androidx.constraintlayout.widget.ConstraintLayout>
