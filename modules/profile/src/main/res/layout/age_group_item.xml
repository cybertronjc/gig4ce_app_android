<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/lato"
        android:text="@string/what_s_your_age_group_profile"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/age_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">


        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size16"
            android:layout_marginStart="@dimen/size16"
            android:paddingLeft="@dimen/size16"
            android:buttonTint="#d5d5d5"
            android:layout_marginEnd="@dimen/size16"
            android:background="@drawable/experience_options_background"
            android:fontFamily="@font/lato"
            android:text="@string/_14_18_years_profile"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="normal"
            style="@style/Theme.RadioButtonLipstickPink"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size16"
            android:paddingLeft="@dimen/size16"
            android:layout_marginTop="@dimen/size16"
            android:layout_marginEnd="@dimen/size16"
            android:background="@drawable/experience_options_background"
            android:buttonTint="#d5d5d5"
            android:fontFamily="@font/lato"
            android:text="@string/_19_23_years_profile"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="normal"
            style="@style/Theme.RadioButtonLipstickPink"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size16"
            android:paddingLeft="@dimen/size16"
            android:layout_marginTop="@dimen/size16"
            android:background="@drawable/experience_options_background"
            android:buttonTint="#d5d5d5"
            android:layout_marginEnd="@dimen/size16"
            android:fontFamily="@font/lato"
            android:text="@string/_24_28_years_profile"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="normal"
            style="@style/Theme.RadioButtonLipstickPink"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size16"
            android:paddingLeft="@dimen/size16"
            android:layout_marginEnd="@dimen/size16"
            android:layout_marginTop="@dimen/size16"
            android:background="@drawable/experience_options_background"
            android:buttonTint="#d5d5d5"
            android:fontFamily="@font/lato"
            android:text="@string/_29_33_years_profile"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="normal"
            style="@style/Theme.RadioButtonLipstickPink"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size16"
            android:paddingLeft="@dimen/size16"
            android:layout_marginTop="@dimen/size16"
            android:layout_marginEnd="@dimen/size16"
            android:background="@drawable/experience_options_background"
            android:buttonTint="#d5d5d5"
            android:fontFamily="@font/lato"
            android:text="@string/_34_38_years_profile"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="normal"
            style="@style/Theme.RadioButtonLipstickPink"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size16"
            android:paddingLeft="@dimen/size16"
            android:background="@drawable/experience_options_background"
            android:layout_marginTop="@dimen/size16"
            android:buttonTint="#d5d5d5"
            android:layout_marginEnd="@dimen/size16"
            android:fontFamily="@font/lato"
            android:text="@string/above_38_years_profile"
            android:textColor="#333333"
            android:textSize="16sp"
            style="@style/Theme.RadioButtonLipstickPink"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>