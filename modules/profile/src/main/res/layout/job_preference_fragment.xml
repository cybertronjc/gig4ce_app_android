                        android:checked="true"
                        style="@style/Theme.CheckBoxLipstickPink"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:layout_weight="1"
                        android:background="@drawable/rect_gray_border"
                        android:fontFamily="@font/lato"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size8"
                        android:text="Thursday"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/friday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"
                        android:tag="Friday"
                        android:checked="true"
                        style="@style/Theme.CheckBoxLipstickPink"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:layout_weight="1"
                        android:background="@drawable/rect_gray_border"
                        android:fontFamily="@font/lato"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size8"
                        android:text="Friday"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/saturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"
                        android:tag="Saturday"
                        android:checked="true"
                        style="@style/Theme.CheckBoxLipstickPink"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:layout_weight="1"
                        android:background="@drawable/rect_gray_border"
                        android:fontFamily="@font/lato"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size8"
                        android:text="Saturday"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/sunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"
                        android:tag="Sunday"
                        android:checked="true"
                        style="@style/Theme.CheckBoxLipstickPink"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:layout_weight="1"
                        android:background="@drawable/rect_gray_border"
                        android:fontFamily="@font/lato"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size8"
                        android:text="Sunday"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timing_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView4_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/lato"
            android:text="Set Your preferences"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/work_days_"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/size16"
            android:background="#f4faff"
            android:fontFamily="@font/lato"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size16"
            android:text="Time Slots"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView4_" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size16"
            app:layout_constraintTop_toBottomOf="@+id/work_days_">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/early_morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"
                        android:tag="5 am - 8 am"
                        android:checked="true"
                        style="@style/Theme.CheckBoxLipstickPink"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:background="@drawable/rect_gray_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/size8"
                            android:fontFamily="@font/lato"
                            android:text="Early Morning"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/size16"
                            android:fontFamily="@font/lato"
                            android:text="5 am - 8 am"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"
                        android:tag="8 am - 12 pm"
                        android:checked="true"
                        style="@style/Theme.CheckBoxLipstickPink"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:background="@drawable/rect_gray_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/size8"
                            android:fontFamily="@font/lato"
                            android:text="Morning"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/size16"
                            android:fontFamily="@font/lato"
                            android:text="8 am - 12 pm"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/day_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"
                        android:tag="12 pm - 4 pm"
                        android:checked="true"
                        style="@style/Theme.CheckBoxLipstickPink"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:background="@drawable/rect_gray_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/size8"
                            android:fontFamily="@font/lato"
                            android:text="Day Time"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/size16"
                            android:fontFamily="@font/lato"
                            android:text="12 pm - 4 pm"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/evening"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"
                        android:tag="4 pm - 8 pm"
                        android:checked="true"
                        style="@style/Theme.CheckBoxLipstickPink"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:background="@drawable/rect_gray_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/size8"
                            android:fontFamily="@font/lato"
                            android:text="Evening"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/size16"
                            android:fontFamily="@font/lato"
                            android:text="4 pm - 8 pm"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/night"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"
                        android:tag="8 pm - 12 am"
                        android:checked="true"
                        style="@style/Theme.CheckBoxLipstickPink"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:background="@drawable/rect_gray_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/size8"
                            android:fontFamily="@font/lato"
                            android:text="Night"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/size16"
                            android:fontFamily="@font/lato"
                            android:text="8 pm - 12 am"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>