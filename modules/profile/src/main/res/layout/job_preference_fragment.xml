                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:layout_weight="1"
                        android:background="@drawable/rect_gray_border"
                        android:fontFamily="@font/lato"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size8"
                        android:text="Monday"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/tuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"
                        android:tag="Tuesday"
                        android:checked="true"
                        style="@style/Theme.CheckBoxLipstickPink"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:layout_weight="1"
                        android:background="@drawable/rect_gray_border"
                        android:fontFamily="@font/lato"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size8"
                        android:text="Tuesday"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/wednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"
                        android:tag="Wednesday"
                        android:checked="true"
                        style="@style/Theme.CheckBoxLipstickPink"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:layout_weight="1"
                        android:background="@drawable/rect_gray_border"
                        android:fontFamily="@font/lato"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size8"
                        android:text="Wednesday"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/thursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"
