            android:background="#f4faff"
            android:fontFamily="@font/lato"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size16"
            android:text="Time Slots"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView4_" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/work_days_"
            android:layout_marginTop="@dimen/size16">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:background="@drawable/rect_gray_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Early Morning"
                            android:fontFamily="@font/lato"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/size8"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 am - 8 am"
                            android:fontFamily="@font/lato"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/size16"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:background="@drawable/rect_gray_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Early Morning"
                            android:fontFamily="@font/lato"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/size8"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 am - 12 pm"
                            android:fontFamily="@font/lato"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/size16"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:background="@drawable/rect_gray_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Early Morning"
                            android:fontFamily="@font/lato"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/size8"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 pm - 4 pm"
                            android:fontFamily="@font/lato"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/size16"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:background="@drawable/rect_gray_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Early Morning"
                            android:fontFamily="@font/lato"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/size8"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 pm - 8 pm"
                            android:fontFamily="@font/lato"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/size16"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size16"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size16"
                        android:background="@drawable/rect_gray_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Early Morning"
                            android:fontFamily="@font/lato"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/size8"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 pm - 12 am"
                            android:fontFamily="@font/lato"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/size16"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>