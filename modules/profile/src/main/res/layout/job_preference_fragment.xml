<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.fragments.jobpreference.JobPreferenceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/lato"
            android:text="Set Your preferences"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/work_days"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/size16"
            android:background="#f4faff"
            android:fontFamily="@font/lato"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size16"
            android:text="Work Days"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/work_days">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Monday"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size16"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Tuesday"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:layout_marginTop="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Wednesday"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:layout_marginTop="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Thursday"
                android:textColor="#333333"
                android:textSize="16sp"

                android:textStyle="normal" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:layout_marginTop="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Friday"
                android:textColor="#333333"
                android:textSize="16sp"

                android:textStyle="normal" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:layout_marginTop="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Saturday"
                android:textColor="#333333"
                android:textSize="16sp"

                android:textStyle="normal" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:layout_marginTop="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Sunday"
                android:textColor="#333333"
                android:textSize="16sp"
                />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>