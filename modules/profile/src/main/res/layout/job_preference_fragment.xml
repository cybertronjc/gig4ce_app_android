<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.fragments.jobpreference.JobPreferenceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/job_preferences"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/lato"
            android:text="Set Your preferences"
            android:textColor="#131415"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/experience_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <TextView
                android:id="@+id/major_cities_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/size16"
                android:background="#f4faff"
                android:fontFamily="@font/lato"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size16"
                android:text="Job preference"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size16"
            android:background="@drawable/rect_light_blue_fill"
            android:padding="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/experience_status">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imageTextCardcl"
                android:layout_width="0dp"
                android:layout_height="82dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/rect_top_left_cornor_card"
                app:layout_constraintEnd_toStartOf="@+id/imageTextCardcl_"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/icon_iv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_chat"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0"
                    android:text="Full Time"
                    android:textColor="#2e2f30"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon_iv" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imageTextCardcl_"
                android:layout_width="0dp"
                android:layout_height="82dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageTextCardcl"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/icon_iv1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_chat"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0"
                    android:text="Part Time"
                    android:textColor="#2e2f30"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon_iv1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/work_days_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/lato"
            android:text="Set Your preferences"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/work_days"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/size16"
            android:background="#f4faff"
            android:fontFamily="@font/lato"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size16"
            android:text="Work Days"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <RadioGroup
            android:id="@+id/days_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/work_days">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Monday"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size16"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Tuesday"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:layout_marginTop="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Wednesday"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:layout_marginTop="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Thursday"
                android:textColor="#333333"
                android:textSize="16sp"

                android:textStyle="normal" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:layout_marginTop="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Friday"
                android:textColor="#333333"
                android:textSize="16sp"

                android:textStyle="normal" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:layout_marginTop="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Saturday"
                android:textColor="#333333"
                android:textSize="16sp"

                android:textStyle="normal" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size16"
                android:paddingLeft="@dimen/size16"
                android:layout_marginTop="@dimen/size16"
                android:background="@drawable/rect_light_blue_border"
                android:buttonTint="#d5d5d5"
                android:fontFamily="@font/lato"
                android:text="Sunday"
                android:textColor="#333333"
                android:textSize="16sp"
                />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

