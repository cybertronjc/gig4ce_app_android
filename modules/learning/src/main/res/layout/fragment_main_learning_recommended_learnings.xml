<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/retail_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="190dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/why_learning_layout">

    <ImageView
        android:id="@+id/becuaseYouSearchedIV"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/ic_play_round_pink_bck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/becuaseYouSearchedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0"
        android:text="@string/recommended_learnings_learning"
        android:textColor="#080808"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/becuaseYouSearchedIV"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchSuggestionBasedVideosRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toEndOf="@id/becuaseYouSearchedIV"
        app:layout_constraintTop_toBottomOf="@id/becuaseYouSearchedLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>