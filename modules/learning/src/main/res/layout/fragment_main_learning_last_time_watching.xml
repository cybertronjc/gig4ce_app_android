<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e5e5e5"
    android:paddingBottom="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/lato"
        android:text="Last time watching"
        android:textColor="#3e3e47"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resumeButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:minHeight="@dimen/size_36"
        android:text="Resume"
        app:icon="@drawable/ic_play"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/lipstick" />

    <ImageView
        android:id="@+id/videoThumbnailIV"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resumeButton" />

    <TextView
        android:id="@+id/videoTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/lato"
        android:letterSpacing="0"
        android:text="Introduction to Retail Market ?"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/videoThumbnailIV"
        app:layout_constraintTop_toBottomOf="@+id/resumeButton" />

    <TextView
        android:id="@+id/textView107"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/lato"
        android:letterSpacing="0"
        android:text="Industry based "
        android:textColor="@color/battle_ship_grey"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/videoThumbnailIV"
        app:layout_constraintTop_toBottomOf="@+id/videoTitleTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/lato"
        android:letterSpacing="0"
        android:text="20 min learning pending "
        android:textColor="@color/warm_grey"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/videoThumbnailIV"
        app:layout_constraintTop_toBottomOf="@+id/textView107" />


</androidx.constraintlayout.widget.ConstraintLayout>
