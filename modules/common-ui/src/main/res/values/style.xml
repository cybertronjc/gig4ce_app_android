<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CheckBoxLipstickPink" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@drawable/radio_button_drawable</item>
    </style>

    <style name="Theme.RadioButtonLipstickPink" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@drawable/radio_button_drawable</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="ToolbarCustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_toolbar_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_toolbar_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">83dp</item>
        <item name="cornerSizeBottomLeft">83dp</item>
    </style>

    <style name="Theme.SwitchMaterialLipstickPink" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/lipstick_2</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="RoundCornerButtonShapeOverlay" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/RoundCornerAppearance</item>
    </style>
    <style name="RoundCornerAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="style_h3">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#303437</item>
        <item name="android:fontFamily">
            @font/lato
        </item>
    </style>

    <style name="style_h5">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            #000000
        </item>
        <item name="android:fontFamily">
            @font/lato
        </item>
        <item name="android:lineHeight">
            18sp
        </item>
    </style>

    <style name="style_h6">
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:textColor">
            #202325
        </item>
        <item name="android:fontFamily">
            @font/lato
        </item>
        <item name="android:lineHeight">
            18sp
        </item>
    </style>


    <style name="body_primary">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:textColor">
            #979C9E
        </item>
        <item name="android:fontFamily">
            @font/lato
        </item>

    </style>

    <style name="body_primary_2">

        <item name="android:textSize">
            12sp
        </item>
        <item name="android:fontFamily">
            @font/lato
        </item>

    </style>



</resources>