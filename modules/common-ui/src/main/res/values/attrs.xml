<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OutlineTextButtonComponent">
        <attr name="android:textAllCaps" format="boolean"/>
        <attr name="android:text" format="string"/>
    </declare-styleable>

    <declare-styleable name="CoreRecyclerView">
        <attr name="android:orientation" format="integer" />
    </declare-styleable>

    <declare-styleable name="StandardTextActionButtonComponent">
        <attr name="android:textAllCaps" format="boolean"/>
        <attr name="android:text" format="string" />
    </declare-styleable>

    <declare-styleable name="TestButton">
        <attr name="testButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="IconButton">
        <attr name="iconButtonStyle" format="reference"/>
        <attr name="iconType" format="enum">
            <enum name="Chat" value="101"/>
            <enum name="Profile" value="104"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="StandardActionCardComponent">
        <attr name="bgcolor" format="enum">
            <enum name="DEFAULT" value="0"/>
            <enum name="WHITE" value="200"/>
            <enum name="LIGHT_PINK" value="201"/>
            <enum name="LIGHT_BLUE" value="202"/>
            <enum name="LIPSTICK" value="203"/>
            <enum name="GRAY" value="204"/>
        </attr>

        <attr name="textcolor" format="enum">
            <enum name="DEFAULT" value="0"/>
            <enum name="WHITE" value="200"/>
            <enum name="LIGHT_PINK" value="201"/>
            <enum name="LIGHT_BLUE" value="202"/>
            <enum name="LIPSTICK" value="203"/>
            <enum name="GRAY" value="204"/>
        </attr>

<!--        <attr name="titleTextColor" format="color"/>-->
<!--        <attr name="subtitleTextColor" format="color"/>-->
    </declare-styleable>
    <declare-styleable name="FeatureLayoutComponent">
        <attr name="android:orientation" format="integer" />
        <attr name="rows" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SimpleCardComponent">
        <attr name="title" format="string"/>
        <attr name="caption" format="string"/>
    </declare-styleable>
    
    
    <declare-styleable name="ImageViewRounded">
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundCornerImageView">
        <attr name="sriv_left_top_corner_radius" format="dimension" />
        <attr name="sriv_right_top_corner_radius" format="dimension" />
        <attr name="sriv_left_bottom_corner_radius" format="dimension" />
        <attr name="sriv_right_bottom_corner_radius" format="dimension" />
        <attr name="sriv_border_width" format="dimension" />
        <attr name="sriv_border_color" format="color" />
        <attr name="sriv_oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
        <attr name="civ_dashed_border" format="boolean" />
        <attr name="civ_is_qr" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="ChipGroupComponent">
        <attr name="chipGroupComp" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ChipComponent">
        <attr name="chipComponent" format="reference"/>
        <attr name="chip_selectable" format="boolean" />
        <attr name="chip_text" format="string"/>
        <attr name="chipSelected" format="boolean"/>
        <attr name="chipStrokeWidth" format="dimension"/>
        <attr name="chipCornerRadius" format="dimension" />
        <attr name="chip_strokeSize" format="dimension" />
        <attr name="chip_backgroundColor" format="enum">
            <enum name="DEFAULT" value="0"/>
            <enum name="WHITE" value="200"/>
            <enum name="LIGHT_PINK" value="201"/>
            <enum name="LIGHT_BLUE" value="202"/>
            <enum name="LIPSTICK" value="203"/>
            <enum name="GRAY" value="204"/>
        </attr>
        <attr name="chip_textColor" format="enum">
            <enum name="DEFAULT" value="0"/>
            <enum name="WHITE" value="200"/>
            <enum name="LIGHT_PINK" value="201"/>
            <enum name="LIGHT_BLUE" value="202"/>
            <enum name="LIPSTICK" value="203"/>
            <enum name="GRAY" value="204"/>
        </attr>

        <attr name="chip_strokeColor" format="enum">
            <enum name="DEFAULT" value="0"/>
            <enum name="WHITE" value="200"/>
            <enum name="LIGHT_PINK" value="201"/>
            <enum name="LIGHT_BLUE" value="202"/>
            <enum name="LIPSTICK" value="203"/>
            <enum name="GRAY" value="204"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="AppBar">
        <attr name="titleText" format="string"/>
        <attr name="searchHint" format="string"/>
        <attr name="isSearchVisible" format="boolean"/>
        <attr name="isMenuItemVisible" format="boolean"/>
        <attr name="isProfileVisible" format="boolean"/>
        <attr name="isStepsVisible" format="boolean"/>
        <attr name="isRefreshVisible" format="boolean"/>
        <attr name="isFilterVisible" format="boolean"/>
        <attr name="backgroundType" format="enum">
            <enum name="PinkBar" value="101"/>
            <enum name="WhiteBar" value="102"/>
            <enum name="GreyBar" value="103"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="EditTextWithSuffix">
        <attr name="suffix" format="string|reference" />
        <attr name="suffixPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ReadMoreTextView">
        <attr name="trimExpandedText" format="string" />
        <attr name="trimCollapsedText" format="string" />
        <attr name="trimLength" format="integer" />
        <attr name="showTrimExpandedText" format="boolean" />
        <attr name="colorClickableText" format="color" />
        <attr name="trimLines" format="integer" />
        <attr name="trimMode">
            <enum name="trimModeLine" value="0"/>
            <enum name="trimModeLength" value="1"/>
        </attr>
    </declare-styleable>
</resources>