<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/ic_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/option_ellipses"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/ic_ellipses"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEFEFE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:paddingBottom="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cv_contactDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp">


                    <com.gigforce.common_ui.views.GigforceImageView
                        android:id="@+id/group_icon"
                        android:layout_width="match_parent"
                        android:layout_height="226dp"
                        android:src="@drawable/ic_group"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/group_name_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/lato"
                        android:textColor="@color/lipstick"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingEnd="6dp"
                        app:layout_constraintEnd_toStartOf="@+id/edit_group_name_iv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Group Name" />

                    <TextView
                        android:id="@+id/group_creation_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/lato"
                        android:textColor="#585858"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/group_name_tv"
                        tools:text="Created on : 12 Aug 2020" />

                    <ImageView
                        android:id="@+id/edit_group_name_iv"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:src="@drawable/ic_edit_pink"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/group_deactivated_container"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/group_creation_date_tv">

                        <TextView
                            android:id="@+id/contact_blocked_label"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/red"
                            android:gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:text="@string/this_group_is_deactivated_chat"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <View
                        android:id="@+id/group_details_divider_0"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="16dp"
                        android:background="#f2f2f2"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/group_deactivated_container" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/group_write_controls_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/group_details_divider_0">

                        <TextView
                            android:id="@+id/group_controls_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/lato"
                            android:lineHeight="17sp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="@string/group_controls_chat"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/only_admin_can_post_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/group_controls_label">

                            <TextView
                                android:id="@+id/only_admins_can_post_switch_label"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato"
                                android:lineHeight="17sp"
                                android:paddingTop="6dp"

                                android:text="@string/only_admins_can_post_in_group_chat"
                                android:textColor="@color/black_two"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/only_admins_can_post_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="8dp"
                                android:focusable="false"
                                android:theme="@style/Theme.SwitchMaterialLipstickPink" />

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/group_details_divider_1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="16dp"
                        android:background="#f2f2f2"
                        app:layout_constraintTop_toBottomOf="@id/group_write_controls_layout" />

                    <LinearLayout
                        android:id="@+id/media_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/group_details_divider_1">

                        <TextView
                            android:id="@+id/media_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/lato"
                            android:lineHeight="17sp"
                            android:paddingTop="16dp"
                            android:paddingBottom="20dp"
                            android:text="@string/media_chat"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="normal" />


                        <TextView
                            android:id="@+id/media_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="@font/lato"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toStartOf="@id/media_forward_iv"
                            app:layout_constraintTop_toBottomOf="@id/group_details_divider_1"
                            tools:text="8" />

                        <ImageView
                            android:id="@+id/media_forward_iv"
                            android:layout_width="18dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="16dp"
                            android:scaleX="0.75"
                            android:scaleY="0.75"
                            android:src="@drawable/ic_forward"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/group_details_divider_1" />


                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/media_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/media_title_layout" />


                    <View
                        android:id="@+id/group_details_divider_2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#f2f2f2"
                        app:layout_constraintTop_toBottomOf="@id/media_recyclerview" />


                    <TextView
                        android:id="@+id/gigers_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/lato"
                        android:text="@string/gigers_chat"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/group_details_divider_2" />

                    <ImageView
                        android:id="@+id/gigers_forward_iv"
                        android:layout_width="12dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_forward"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/group_details_divider_2" />

                    <TextView
                        android:id="@+id/gigers_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/lato"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toStartOf="@id/gigers_forward_iv"
                        app:layout_constraintTop_toBottomOf="@id/group_details_divider_2"
                        tools:text="8" />

                    <LinearLayout
                        android:id="@+id/search_gigers_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="16dp"
                        android:background="#10888888"
                        android:gravity="center_vertical"
                        android:minHeight="35dp"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@id/gigers_label">

                        <EditText
                            android:id="@+id/search_textview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/search_giger_chat" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_search_calendar"
                            app:tint="@color/colorPrimary" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/add_giger_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:minHeight="35dp"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/search_gigers_layout">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/add_contact_fab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:src="@drawable/ic_plus_icon"
                            android:textSize="20sp"
                            app:borderWidth="0dp"
                            app:elevation="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/search_gigers_layout"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/lato"
                            android:lineHeight="17sp"
                            android:text="@string/add_new_giger_chat"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/user_list_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@id/add_giger_layout" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/deactivate_group_btn"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="16dp"
                        android:padding="8dp"
                        android:text="@string/deactivate_group_chat"
                        android:textAllCaps="false"
                        app:layout_constraintTop_toBottomOf="@id/user_list_recyclerview"
                        app:strokeColor="@color/colorPrimary" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </ScrollView>
</LinearLayout>