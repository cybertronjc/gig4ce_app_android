<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.ChatPageFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_contactDetails"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="0dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_backArrowInChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_arrow_back_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/user_image_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_backArrowInChat"
                />

            <TextView
                android:id="@+id/tv_nameValueInChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="NA"
                android:textColor="#d72467"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@id/user_image_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_lastSeenValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/dust_grey"
                app:layout_constraintStart_toStartOf="@+id/tv_nameValueInChat"
                app:layout_constraintTop_toBottomOf="@+id/tv_nameValueInChat" />

            <ImageView
                android:id="@+id/iv_verticalDots"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/ic_ellipses"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/contact_blocked_label"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/red"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:visibility="gone"
        android:text="You've blocked this contact"
        android:textColor="@android:color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_group_wallpaper"
        />

        <com.gigforce.core.recyclerView.CoreRecyclerView
            android:id="@+id/rv_chat_messages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />

    </FrameLayout>


    <com.gigforce.modules.feature_chat.ui.ChatFooter
        android:id="@+id/chat_footer"
        android:layout_width="match_parent"
        android:layout_height="56dp" />


</LinearLayout>