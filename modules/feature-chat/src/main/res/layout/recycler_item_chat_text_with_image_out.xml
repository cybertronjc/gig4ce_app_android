<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="end"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_msgContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/chat_item_margin"
        app:cardBackgroundColor="@color/chat_outgoing_mesage_background_color"
        app:cardCornerRadius="@dimen/chat_item_corner_radius"
        app:cardElevation="@dimen/chat_item_card_elevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_msgContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp">


            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Himanshu" />

            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="196dp"
                android:layout_height="196dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_image"
                    android:layout_width="196dp"
                    android:layout_height="196dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_group_wallpaper"
                    app:shapeAppearanceOverlay="@style/chatImageView" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/download_overlay_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="#51000000"
                    app:shapeAppearanceOverlay="@style/circleImageView" />

                <ImageView
                    android:id="@+id/download_icon_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_download_24"
                    app:tint="@android:color/white" />

                <ProgressBar
                    android:id="@+id/attachment_downloading_pb"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center" />

            </FrameLayout>


            <ImageView
                android:id="@+id/tv_received_status"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/dust_grey"
                android:src="@drawable/ic_msg_sent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content_frame"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/tv_msgTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="NdfdfA"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_received_status"
                app:layout_constraintTop_toBottomOf="@id/content_frame"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>