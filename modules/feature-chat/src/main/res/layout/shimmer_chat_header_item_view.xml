<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/circleView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circular_view_placeholder"
        app:layout_constraintCircleRadius="@dimen/size_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/titleNameView"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginStart="@dimen/size_16"
        android:background="@color/gray_text_color"
        app:layout_constraintCircleRadius="@dimen/size_4"
        app:layout_constraintStart_toEndOf="@id/circleView"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/subtitileNameView"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginBottom="@dimen/size_8"
        android:layout_marginStart="@dimen/size_16"
        android:background="@color/gray_text_color"
        app:layout_constraintCircleRadius="@dimen/size_4"
        app:layout_constraintStart_toEndOf="@id/circleView"
        app:layout_constraintBottom_toBottomOf="@id/circleView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>