<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/timer_root_card_layout"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#eeeeee"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/gig_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:textColor="@color/warm_grey"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Today , 09 July 2020" />

            <com.gigforce.giger_gigs.views.GigStatusCardView
                android:id="@+id/gig_status_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/timer_and_attendance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/gig_status_card_view">

                <TextView
                    android:id="@+id/gig_timer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0"
                    android:textColor="@color/black_85"
                    android:textSize="24sp"
                    tools:text="00hrs : 20 mins" />

                <TextView
                    android:id="@+id/gig_checkin_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0"
                    android:textColor="@color/black_85"
                    android:textSize="12sp"
                    tools:text="00hrs : 20 mins" />

            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/gig_attendance_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/gig_status_card_view">

                <View
                    android:id="@+id/view40"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="#979797"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/presentGigcheckInIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_checkin_illus" />


                <TextView
                    android:id="@+id/presentGigPunchInLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0"
                    android:text="@string/check_in_"
                    android:textColor="@color/black_85"
                    app:layout_constraintEnd_toStartOf="@+id/view40"
                    app:layout_constraintStart_toEndOf="@id/presentGigcheckInIV"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/presentGigpunchInTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:letterSpacing="0"
                    android:text="--:--:--"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black_85"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/view40"
                    app:layout_constraintStart_toEndOf="@+id/presentGigcheckInIV"
                    app:layout_constraintTop_toBottomOf="@id/presentGigPunchInLabel" />


                <ImageView
                    android:id="@+id/presentGigCheckOutIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view40"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_checkout_illus" />


                <TextView
                    android:id="@+id/presentGigPunchOutLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0"
                    android:text="@string/check_out"
                    android:textColor="@color/black_85"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/presentGigCheckOutIV"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/presentGigpunchOutTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:letterSpacing="0"
                    android:text="--:--:--"
                    android:textColor="@color/black_85"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/presentGigCheckOutIV"
                    app:layout_constraintTop_toBottomOf="@id/presentGigPunchOutLabel" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>