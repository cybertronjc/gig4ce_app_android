<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        android:background="@drawable/filter_bottom_background"
        android:orientation="vertical"
        tools:context=".payouts.payout_details.PayoutDetailsFragment">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="134dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_attendance_calendar"/>

        <TextView
            android:id="@+id/attendance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/lato_bold"
            android:lineHeight="18sp"
            android:text="Resolve"
            android:textColor="@color/inkDefault"
            android:textFontWeight="700" />

        <TextView
            android:id="@+id/confirmation_text_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/lato"
            android:lineHeight="18sp"
            android:text="Are you sure that you want to mark giger active?"
            android:textColor="@color/inkDefault"
            android:textFontWeight="400"
            android:textSize="12sp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/yes_button"
            style="@style/LeadMgmtMaterialButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/lato"
            android:text="Yes"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="12sp"
            app:shapeAppearanceOverlay="@style/RoundCornerButtonShapeOverlay" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/no_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/lato"
            android:text="No"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/lipstick_2"
            android:textFontWeight="700"
            android:textSize="12sp"
            app:shapeAppearanceOverlay="@style/RoundCornerButtonShapeOverlay"
            app:strokeColor="@color/lipstick_2"
            app:strokeWidth="1dp" />


    </LinearLayout>
</layout>
