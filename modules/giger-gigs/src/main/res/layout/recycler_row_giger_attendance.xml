<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="18dp"
        android:paddingBottom="2dp"
        >

        <com.gigforce.common_ui.views.GigforceImageView
            android:id="@+id/user_image_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circleImageView"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/call_giger_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_call_drawable_2"
            />




        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#646464"
            android:textSize="16sp"
            android:lineHeight="19sp"
            android:fontFamily="@font/lato"
            app:layout_constraintStart_toEndOf="@id/user_image_iv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Rahulefefeav" />


        <TextView
            android:id="@+id/user_designation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="97dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/lato"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/user_image_iv"
            app:layout_constraintTop_toBottomOf="@id/user_name_tv"
            tools:text="Contracter" />

        <TextView
            android:id="@+id/user_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/user_image_iv"
            app:layout_constraintTop_toBottomOf="@id/user_designation_tv"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="user_name_tv" />

        <TextView
            android:id="@+id/user_attendance_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="8dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/call_giger_btn"
            app:layout_constraintHorizontal_bias="0.008"
            app:layout_constraintStart_toEndOf="@id/barrier1"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/status_present_chip_background"
            tools:text="Present" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
