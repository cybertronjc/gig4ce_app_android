            <AutoCompleteTextView
                android:id="@+id/citySpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_46"
                android:background="@drawable/city_spinner_background"
                android:layout_marginTop="@dimen/size_16"
                android:hint="@string/choose_city_giger_gigs"
                android:paddingStart="@dimen/size_6"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginEnd="@dimen/size_16"
                app:layout_constraintTop_toBottomOf="@id/dateOfAtt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Spinner
                android:id="@+id/anyspinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_46"
                android:clickable="true"
                android:inputType="none"
                android:background="@drawable/city_spinner_background"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginEnd="@dimen/size_16"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/dateOfAtt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/chooseCityImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down_arrow_pink_vector"
                app:layout_constraintEnd_toEndOf="@id/citySpinner"
                app:layout_constraintTop_toTopOf="@id/citySpinner"
                app:layout_constraintBottom_toBottomOf="@id/citySpinner"/>

            <TextView
                android:id="@+id/cityTextView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_46"
                android:text="@string/city_giger_gigs"
                android:visibility="invisible"
                android:padding="6dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/lato_bold"
                android:background="@drawable/city_spinner_background"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginEnd="@dimen/size_16"
                app:layout_constraintTop_toBottomOf="@id/dateOfAtt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/noDataFound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginEnd="@dimen/size_16"
                app:layout_constraintTop_toBottomOf="@id/citySpinner"
                app:layout_constraintBottom_toTopOf="@id/submit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/noDataImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_group_2679"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/attMarkedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mark_todays_attendance_giger_gigs"
                    android:padding="6dp"
                    android:textSize="@dimen/font14"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginEnd="@dimen/size_16"
                    android:layout_marginTop="@dimen/size_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/noDataImg"
                    app:layout_constraintStart_toStartOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

