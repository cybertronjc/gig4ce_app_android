<!--                app:layout_constraintStart_toEndOf="@id/changeDateImg"-->
<!--                />-->



            <TextView
                android:id="@+id/loginsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:padding="6dp"
                android:textColor="#E42C64"
                android:fontFamily="@font/lato_bold"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginEnd="@dimen/size_16"
                app:layout_constraintTop_toTopOf="@id/teamLeaderName"
                app:layout_constraintStart_toStartOf="@id/totalLogins"
                app:layout_constraintEnd_toEndOf="@id/totalLogins"/>

            <TextView
                android:id="@+id/totalLogins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logins_giger_gigs"
                android:padding="6dp"
                android:textColor="#000000"
                android:fontFamily="@font/lato"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginEnd="@dimen/size_16"
                app:layout_constraintBottom_toBottomOf="@id/dateOfAtt"
                app:layout_constraintTop_toTopOf="@+id/dateOfAtt"
                app:layout_constraintEnd_toEndOf="parent"/>

