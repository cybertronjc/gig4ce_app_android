<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gig_monthly_attendance_top_card_drawable"
    android:paddingBottom="17dp">

    <ImageView
        android:id="@+id/gig_cross_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cross_grey"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/gig_ellipses_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_ellipses"
        app:tint="@color/white" />


    <ImageView
        android:id="@+id/company_logo_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gig_cross_btn"
        app:srcCompat="@drawable/ic_location" />

    <TextView
        android:id="@+id/gig_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0"
        android:text="@string/field_development_officer_giger_gigs"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/company_logo_iv"
        app:layout_constraintTop_toBottomOf="@id/gig_cross_btn" />

    <TextView
        android:id="@+id/gig_company_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="\ufeff@ Seedworks"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/gig_title_tv"
        app:layout_constraintTop_toBottomOf="@id/gig_title_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>