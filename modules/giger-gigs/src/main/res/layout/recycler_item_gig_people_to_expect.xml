<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minWidth="240dp"
        android:padding="16dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_image_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textColor="#d9000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/user_image_iv"
            tools:text="Sunita " />

        <TextView
            android:id="@+id/designation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="@id/user_name_tv"

            app:layout_constraintTop_toBottomOf="@id/user_name_tv"
            tools:text="Supervisor" />

        <TextView
            android:id="@+id/company_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="@id/user_name_tv"
            app:layout_constraintTop_toBottomOf="@id/designation_tv"
            tools:text="Gigforce Pvt Ltd." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/call_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:text="@string/call"
            android:drawableLeft="@drawable/ic_call_pink"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            app:backgroundTint="#ffe9ef"
            android:textColor="@color/lipstick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chat_btn"
            app:layout_constraintTop_toBottomOf="@id/company_name_tv"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/chat_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:text="@string/chat"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            app:backgroundTint="#ffe9ef"
            android:drawableLeft="@drawable/ic_chat_pink"
            android:textColor="@color/lipstick"
            app:layout_constraintStart_toEndOf="@id/call_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/company_name_tv"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>