<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            tools:context=".payouts.payout_details.PayoutDetailsFragment">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="134dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_attendance_calendar" />

            <TextView
                android:id="@+id/attendance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/lato_bold"
                android:lineHeight="18sp"
                android:text="Mark Inactive?"
                android:textColor="@color/inkDefault"
                android:textFontWeight="700" />

            <TextView
                android:id="@+id/confirmation_text_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato"
                android:lineHeight="18sp"
                android:text="Please select a reason for marking the giger Inactive."
                android:textColor="@color/inkDefault"
                android:textFontWeight="400"
                android:textSize="12sp" />

            <RadioGroup
                android:id="@+id/reason_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp" />

            <TextView
                android:id="@+id/reason_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:letterSpacing="0"
                android:text="@string/reason_giger_gigs"
                android:textColor="#313131"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reason_radio_group" />


            <EditText
                android:id="@+id/reason_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_border_lipstick"
                android:inputType="textMultiLine"
                android:minHeight="76dp"
                android:padding="5dp"
                android:textColor="#313131"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reason_label" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/yes_button"
                style="@style/LeadMgmtMaterialButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:enabled="false"
                android:fontFamily="@font/lato"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="12sp"
                app:shapeAppearanceOverlay="@style/RoundCornerButtonShapeOverlay" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/no_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/lato"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Cancel"
                android:textColor="@color/lipstick_2"
                android:textFontWeight="700"
                android:textSize="12sp"
                app:shapeAppearanceOverlay="@style/RoundCornerButtonShapeOverlay"
                app:strokeColor="@color/lipstick_2"
                app:strokeWidth="1dp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>

