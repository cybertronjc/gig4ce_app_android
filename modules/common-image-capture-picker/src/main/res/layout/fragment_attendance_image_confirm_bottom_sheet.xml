<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/confirm_image_bottom_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/drop_selection_title"
            android:textColor="#202325"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:fontFamily="@font/lato_bold"
            android:lineHeight="@dimen/font_12"
            android:text="@string/unable_to_detect_face_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/drop_selection_label"
            android:textColor="#202325"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_face_detected_details_common"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/submit_image"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginEnd="@dimen/size_20"
            android:background="@drawable/primary_bottom_button_background"
            android:gravity="center"
            android:textAllCaps="true"
            android:fontFamily="@font/lato_bold"
            android:text="@string/submit_common"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/try_again_image"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_16"
            android:background="@drawable/secondary_bottom_button_background"
            android:gravity="center"
            android:textAllCaps="true"
            android:fontFamily="@font/lato_bold"
            android:text="@string/try_again_common"
            android:textAlignment="center"
            android:textColor="@color/topBarDark" />


    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>