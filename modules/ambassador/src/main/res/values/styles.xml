<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- if using android.widget.PopupMenu -->
        <item name="android:popupMenuStyle">@style/PopupMenuTheme</item>
        <!-- if using android.support.v7.widget.PopupMenu -->
        <item name="popupMenuStyle">@style/PopupMenuTheme</item>
    </style>

    <style name="PopupMenuTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@drawable/bg_pop_up_menu_enrolled_users</item>
    </style>

    <style name="AppSingleChoiceChip2" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/app_chip_text_colors_2</item>
        <item name="chipStrokeColor">@color/app_chip_stroke_colors_2</item>
        <item name="chipBackgroundColor">@color/app_chip_bck_colors_2</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="RoundedSquaredChips" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/app_chip_bck_colors</item>
        <item name="android:textColor">@color/app_chip_text_colors</item>
        <item name="chipStrokeColor">@color/app_enrolled_users_chip_stroke_colors</item>
        <item name="shapeAppearanceOverlay">@style/RoundedSquaredChipsStyle</item>
    </style>
    <style name="RoundedSquaredChipsStyle" parent="">
        <item name="cornerSize">10%</item>
    </style>
</resources>