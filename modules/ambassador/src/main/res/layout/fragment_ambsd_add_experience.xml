<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.gigforce.common_ui.views.GigforceToolbar
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/skip_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:enabled="true"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:text="@string/skip_underline"
        android:textColor="@color/warm_grey"
        android:textAllCaps="false"
        android:minHeight="0dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:enabled="true"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="@string/next_camel_case"
        app:strokeColor="@color/lipstick"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toTopOf="@id/skip_btn" />


    <ScrollView
        android:id="@+id/experience_root_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/submitBtn"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/breifing_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                      app:srcCompat="@drawable/banner_users_grid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:lineHeight="17sp"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/glad_to_know_about_your_interest_give_a_bit_more_details_to_show_best_gigs_to_you"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <TextView
                android:id="@+id/do_you_have_exp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/lato_bold"
                android:lineSpacingExtra="3sp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:lineHeight="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/breifing_layout"
                tools:text="@string/do_you_have_experience_in_delivery_executive" />


            <TextView
                android:id="@+id/have_exp_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/do_you_have_exp_label"
                tools:text="Some Error" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/exp_chipgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:chipSpacingHorizontal="14dp"
                app:layout_constraintTop_toBottomOf="@id/have_exp_error"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/exp_yes"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes_i_have_an_experience"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/exp_no"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_i_don_t_have"
                    app:chipStrokeWidth="1dp" />


            </com.google.android.material.chip.ChipGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/exp_yes_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone"

                app:layout_constraintTop_toBottomOf="@id/exp_chipgroup">

                <TextView
                    android:id="@+id/what_was_your_role_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:lineSpacingExtra="3sp"
                    android:text="Select Role"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/role_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:minHeight="40dp"
                    app:singleSelection="true"
                    app:layout_constraintTop_toBottomOf="@id/what_was_your_role_label" />

                <TextView
                    android:id="@+id/role_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/role_chipgroup"
                    tools:text="Some Error" />


                <TextView
                    android:id="@+id/company_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:lineSpacingExtra="3sp"
                    android:text="Company Name"
                    android:layout_marginTop="24dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/role_error" />

                <EditText
                    android:id="@+id/company_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rectangle_round_grey"
                    android:fontFamily="@font/lato"
                    android:hint="Company Name"
                    android:lineSpacingExtra="3sp"
                    android:minHeight="36dp"
                    android:paddingStart="8dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@id/company_name_label" />

                <TextView
                    android:id="@+id/company_name_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_name_et"
                    tools:text="Some Error" />

                <TextView
                    android:id="@+id/experience_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/lato_bold"
                    android:lineSpacingExtra="3sp"
                    android:text="Total Experience"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:lineHeight="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_name_error" />

                <TextView
                    android:id="@+id/experience_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/experience_label"
                    tools:text="Some Error" />

                <LinearLayout
                    android:id="@+id/years_exp_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="3sp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/months_exp_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/experience_error"
                    >

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/year_exp_spinner"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="8dp"
                        android:background="@drawable/spinner_background_rectangle_round_grey"
                        android:layout_height="36dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/months_exp_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginStart="4dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@id/years_exp_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/experience_error"
                    >

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/months_exp_spinner"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="36dp"
                        android:paddingStart="8dp"
                        android:background="@drawable/spinner_background_rectangle_round_grey"
                        />


                </LinearLayout>


                <CheckBox
                    android:id="@+id/currently_work_here_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:minHeight="36dp"
                    android:paddingStart="8dp"
                    style="@style/Theme.CheckBoxLipstickPink"
                    android:text="@string/currently_working_here"
                    android:textColor="#979797"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/months_exp_layout" />

                <TextView
                    android:id="@+id/currently_working_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/currently_work_here_checkbox"
                    tools:text="Some Error" />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/driver_question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/exp_yes_layout">

                <TextView
                    android:id="@+id/own_vechile_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:text="Which vehicle you own?"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/own_vehicles_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/own_vechile_label"
                    tools:text="Some Error" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/driver_own_vehicle_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    app:chipSpacingHorizontal="14dp"
                    app:layout_constraintTop_toBottomOf="@id/own_vehicles_error">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/driver_option_car"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Car"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/driver_option_truck"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Truck"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/driver_option_auto"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autorickshaw"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/driver_option_bike"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bike"
                        app:chipStrokeWidth="1dp" />


                </com.google.android.material.chip.ChipGroup>




            </LinearLayout>


            <LinearLayout
                android:id="@+id/delivery_exec_question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/driver_question_layout">

                <TextView
                    android:id="@+id/delivery_exec_question_vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:text="Which vehicle you own?"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/delivery_exec_vehicles_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    tools:text="Some Error" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/delivery_exec_own_vehicle_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:chipSpacingHorizontal="14dp"
                    app:layout_constraintTop_toBottomOf="@id/delivery_exec_vehicles_error">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/delivery_exec_car"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Car"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/delivery_exec_bicycle"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Truck"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/delivery_exec_scooty"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scooty"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/delivery_exec_option_bike"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bike"
                        app:chipStrokeWidth="1dp" />


                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>