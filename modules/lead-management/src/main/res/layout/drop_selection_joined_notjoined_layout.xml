<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dropSelectionImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_40"
            android:src="@drawable/ic_drop_selection_illustration" />

        <TextView
            android:id="@+id/drop_selection_title"
            android:textColor="#202325"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:fontFamily="@font/lato_bold"
            android:lineHeight="@dimen/font_12"
            android:text="@string/drop_selection_lead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/drop_selection_label"
            style="@style/body_primary"
            android:textColor="#202325"
            android:text="@string/select_an_option_lead"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView96">

        <RadioButton
            android:id="@+id/notJoinedRadio"
            style="@style/Theme.RadioButtonLipstickPink"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0"
            android:paddingLeft="15dp"
            android:text="@string/giger_not_joined_lead"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/joinedRadio"
            style="@style/Theme.RadioButtonLipstickPink"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0"
            android:paddingLeft="15dp"
            android:text="@string/giger_joined_lead"
            android:textColor="@color/black"
            android:textSize="14sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/confirm_drop"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginEnd="@dimen/size_20"
            android:background="@drawable/bottom_primary_button_background"
            android:gravity="center"
            android:enabled="false"
            android:textAllCaps="true"
            android:fontFamily="@font/lato_bold"
            android:text="@string/continue_lead"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/cancel_drop"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_16"
            android:background="@drawable/bottom_secondary_button_background"
            android:gravity="center"
            android:textAllCaps="true"
            android:fontFamily="@font/lato_bold"
            android:text="@string/cancel_lead"
            android:textAlignment="center"
            android:textColor="@color/pink_text" />


    </LinearLayout>
</layout>
