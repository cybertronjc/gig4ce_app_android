<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/okay_button"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <ImageView
                android:id="@+id/tick_image_imageview"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:src="@drawable/ic_green_tick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/change_tl_affect_label"
                style="@style/style_h5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="@string/team_leader_changed_giger_gigs"
                android:textColor="#303437"
                android:textSize="@dimen/font_24"
                app:layout_constraintTop_toBottomOf="@id/tick_image_imageview" />

            <TextView
                android:id="@+id/change_tl_success"
                style="@style/style_h5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/changes_from_today_giger_gigs"
                android:textColor="#303437"
                android:textSize="@dimen/font_16"
                app:layout_constraintTop_toBottomOf="@id/change_tl_affect_label" />

        </LinearLayout>




        <com.google.android.material.button.MaterialButton
            android:id="@+id/okay_button"
            style="@style/LeadMgmtMaterialButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginEnd="@dimen/size_20"
            android:gravity="center"
            android:fontFamily="@font/lato_bold"
            android:text="@string/continue_giger_gigs"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
