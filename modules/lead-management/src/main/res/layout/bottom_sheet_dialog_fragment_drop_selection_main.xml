<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/size_40"
            android:src="@drawable/ic_drop_selection_illustration" />

        <TextView
            android:id="@+id/drop_selection_title"
            android:textColor="#202325"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:fontFamily="@font/lato_bold"
            android:lineHeight="@dimen/font_12"
            android:text="@string/drop_selection_lead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/drop_selection_label"
            style="@style/body_primary"
            android:textColor="#202325"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/are_you_sure_drop_lead"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/drop_selection_direct"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginEnd="@dimen/size_20"
            android:background="@drawable/bottom_primary_button_background"
            android:gravity="center"
            android:textAllCaps="true"
            android:fontFamily="@font/lato_bold"
            android:text="@string/drop_selection_lead"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_16"
            android:background="@drawable/bottom_secondary_button_background"
            android:gravity="center"
            android:textAllCaps="true"
            android:fontFamily="@font/lato_bold"
            android:text="@string/cancel_lead"
            android:textAlignment="center"
            android:textColor="@color/pink_text" />


    </LinearLayout>
</layout>
