        <ImageButton
            android:id="@+id/select_joining_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_unselect_tick" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_foreground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingStart="16dp"
            android:background="@drawable/joining_row_bg"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/select_joining_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.gigforce.common_ui.views.GigforceImageView
                android:id="@+id/user_image_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView"
                tools:srcCompat="@tools:sample/avatars" />



            <ImageButton
                android:id="@+id/call_giger_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_call_drawable_2" />

            <ImageView
                android:id="@+id/status_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_status_dot"
                android:layout_marginTop="@dimen/size_16"
                app:layout_constraintStart_toStartOf="@id/user_name_tv"
                app:layout_constraintTop_toBottomOf="@id/user_name_tv"/>
            <TextView
                android:id="@+id/user_attendance_status_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_8"
                android:textColor="@color/pink_text"
                app:layout_constraintStart_toEndOf="@id/status_dot"
                app:layout_constraintTop_toTopOf="@id/status_dot"
                app:layout_constraintBottom_toBottomOf="@id/status_dot"
                tools:text="Present" />

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:lineHeight="19sp"
                android:textColor="#646464"
                android:textSize="16sp"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/lato_bold"
                app:layout_constraintStart_toEndOf="@id/user_image_iv"
                app:layout_constraintEnd_toStartOf="@id/call_giger_btn"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Rahulefefeedededdedededav" />


            <TextView
                android:id="@+id/user_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/lato"
                android:textSize="16sp"
                android:visibility="gone"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@id/user_image_iv"
                app:layout_constraintTop_toBottomOf="@id/user_name_tv"
                app:layout_constraintEnd_toStartOf="@id/call_giger_btn"
                />





