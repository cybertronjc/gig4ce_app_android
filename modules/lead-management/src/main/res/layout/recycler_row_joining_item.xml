<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/swipe_bck_left_half"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#62c554"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <ImageView
                    android:id="@+id/checkin_image"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/swipe_check_in_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkin_image"
                    android:fontFamily="@font/lato"
                    android:text="Check-in"
                    android:textColor="@color/white"
                    android:textSize="10sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/swipe_bck_right_half"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ed6b5f"
                android:orientation="vertical"
                android:paddingEnd="12dp">


                <ImageView
                    android:id="@+id/decline_image"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/swipe_decline_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/decline_image"
                    android:fontFamily="@font/lato"
                    android:layout_marginTop="5dp"
                    android:text="Decline"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"
                    android:textSize="10sp" />


            </RelativeLayout>


        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/white"
            android:paddingBottom="2dp">

            <com.gigforce.common_ui.views.GigforceImageView
                android:id="@+id/user_image_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/call_giger_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_call_drawable_2" />


            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:lineHeight="19sp"
                android:textColor="#646464"
                android:textSize="16sp"
                android:fontFamily="@font/lato_bold"
                app:layout_constraintStart_toEndOf="@id/user_image_iv"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Rahulefefeav" />


            <TextView
                android:id="@+id/user_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/lato"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/user_image_iv"
                app:layout_constraintTop_toBottomOf="@id/user_name_tv" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="user_name_tv" />

            <TextView
                android:id="@+id/user_attendance_status_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="2dp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@id/call_giger_btn"
                app:layout_constraintHorizontal_bias="0.008"
                app:layout_constraintStart_toEndOf="@id/barrier1"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Present" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>
