<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"/>

        <TextView
            android:id="@+id/joining_pending_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Joining is Pending !"
            android:fontFamily="@font/lato_bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.GigforceStyles.Subtitle1"
            android:lineSpacingExtra="0sp"
            android:gravity="top" />

        <TextView
            android:id="@+id/joining_pending_label_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your profile got selected, please complete your application to proceed."
            android:fontFamily="@font/lato"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.GigforceStyles.Subtitle2"
            android:lineSpacingExtra="0sp"
            android:gravity="top" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="#FDF2F6"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jobProfileNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#303437"
                android:paddingTop="10dp"
                android:paddingBottom="2.5dp"
                android:fontFamily="@font/lato_bold"
                tools:text="Flipkart Executive ss"/>


            <TextView
                android:id="@+id/expected_joining_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:textColor="#303437"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp"
                tools:text="Expected joining date - 29/on/2333"/>


            <TextView
                android:id="@+id/location_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:textColor="#303437"
                android:paddingTop="2.5dp"
                android:paddingBottom="10dp"
                tools:text="Location - Palam vihar"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:text="Complete joining"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:strokeColor="@color/lipstick_2"
            app:strokeWidth="1dp"
            android:text="Do it later"/>

    </LinearLayout>
</layout>
