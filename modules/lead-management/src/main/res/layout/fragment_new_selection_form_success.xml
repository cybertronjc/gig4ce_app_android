<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.gigforce.common_ui.components.cells.AppBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:actionBarSize"
            app:backgroundType="PinkBar"
            app:titleText="New Selection" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="557dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_form_submitted_success" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:src="@drawable/ic_right_tick" />

                <TextView
                    android:id="@+id/selection_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="40dp"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="3sp"
                    android:text="Selection form submitted"
                    android:textAppearance="@style/style_h3" />


                <TextView
                    android:id="@+id/selection_fs"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="3sp"
                    android:text="Invitation Link:  Shared on Whatsapp and SMS with Giger to Complete Application"
                    android:textAppearance="@style/style_h5"
                    android:textColor="#303437" />

                <LinearLayout
                    android:id="@+id/share_link_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_share_pink" />


                    <TextView
                        android:id="@+id/share_link_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center_horizontal|top"
                        android:lineSpacingExtra="4sp"
                        android:text="SHARE LINK MANUALLY"
                        android:textAppearance="@style/style_h6"
                        android:textColor="@color/lipstick_2"
                        android:translationY="-1.8sp" />

                </LinearLayout>


            </LinearLayout>
        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginBottom="@dimen/size_16"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:shapeAppearanceOverlay="@style/RoundCornerButtonShapeOverlay"
            android:text="Okay"
            android:textColor="@color/white" />


    </LinearLayout>
</layout>

