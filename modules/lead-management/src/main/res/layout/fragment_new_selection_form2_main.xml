<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/select_city_label"
                    android:layout_width="134dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:gravity="top"
                    android:lineSpacingExtra="1sp"
                    android:text="Select City"
                    android:textAppearance="@style/style_h5"
                    android:translationY="-0.6sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/select_city_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/city_selected_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:lineSpacingExtra="4sp"
                            android:text="Click to select city"
                            android:textAppearance="@style/body_primary"
                            android:textColor="@color/lipstick_2"
                            android:textStyle="bold"
                            android:translationY="-1.8sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/right_arrow_24" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/city_error_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_reporting_location"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:gravity="top"
                        android:lineSpacingExtra="1sp"
                        android:text="Reporting Location"
                        android:textAppearance="@style/style_h5"
                        android:translationY="-0.6sp" />

                    <CheckBox
                        android:id="@+id/state_wise_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/style_h5"
                        android:text="Show All locations"/>

                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/select_reporting_location_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/reporting_location_selected_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:lineSpacingExtra="4sp"
                            android:text="Click to select locaiton"
                            android:textAppearance="@style/body_primary"
                            android:textColor="@color/lipstick_2"
                            android:textStyle="bold"
                            android:translationY="-1.8sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/right_arrow_24" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/reporting_location_error_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/client_tl_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:lineSpacingExtra="1sp"
                        android:text="Client TL"
                        android:textAppearance="@style/style_h5"
                        android:translationY="-0.6sp" />

                    <TextView
                        android:id="@+id/client_tl_label_optional"
                        android:layout_width="134dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="4dp"
                        android:gravity="top"
                        android:lineSpacingExtra="1sp"
                        android:text="(Optional)"
                        android:textAppearance="@style/body_primary"
                        android:translationY="-0.6sp" />

                </LinearLayout>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/select_client_tl_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/selected_client_tl_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:lineSpacingExtra="4sp"
                            android:text="Click to select team leader"
                            android:textAppearance="@style/body_primary"
                            android:textColor="@color/lipstick_2"
                            android:textStyle="bold"
                            android:translationY="-1.8sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/right_arrow_24" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/expected_date_of_joining_label"
                    android:layout_width="134dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="28dp"
                    android:gravity="top"
                    android:lineSpacingExtra="1sp"
                    android:text="Expected date of joining"
                    android:textAppearance="@style/style_h5"
                    android:translationY="-0.6sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/selected_date_label"
                        style="@style/style_h5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                         />


                    <TextView
                        android:id="@+id/change_date_btn"
                        style="@style/style_h5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Date"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:textColor="@color/lipstick_2" />


                </LinearLayout>

                <TextView
                    android:id="@+id/expected_date_error_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <View
                    android:id="@+id/line_79"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="#EBEBEB" />

                <TextView
                    android:id="@+id/giger_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="28dp"
                    android:gravity="top"
                    android:lineSpacingExtra="1sp"
                    android:text="Select Shift Timing (Multi Select)"
                    android:textAppearance="@style/style_h5"
                    android:translationY="-0.6sp" />

                <TextView
                    android:id="@+id/shift_error_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/shift_chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    />

                <TextView
                    android:id="@+id/job_profile_error_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginBottom="@dimen/size_16"
            android:background="@color/lipstick_2"
            android:text="Next"
            android:textColor="@color/white" />

    </LinearLayout>
</layout>

