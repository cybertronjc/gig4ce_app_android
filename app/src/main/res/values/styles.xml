<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:backgroundTint">@android:color/white</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item> -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textViewStyle">@style/AppTheme.TextStyle</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="Theme.switchButton" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="Theme.checkbox" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="FieldtextLatoRegularGrey12">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">7.1sp</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="Body1SelectedOnSurfaceHighEmphasisLeft">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textColor">#de000000</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="chipTextDefaultColor">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.TextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="AppTheme.TextStyle.H1">
        <item name="android:textSize">96sp</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
        <item name="android:letterSpacing">-1.5</item>
    </style>

    <style name="AppTheme.TextStyle.H2">
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
        <item name="android:letterSpacing">-0.5</item>
    </style>

    <style name="AppTheme.TextStyle.H3">
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTheme.TextStyle.H4">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:letterSpacing">0.25</item>
    </style>

    <style name="AppTheme.TextStyle.H5">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTheme.TextStyle.H6">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>
<!--        <item name="android:color">#000000</item>-->

    <style name="AppTheme.TextStyle.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:color">#313131</item>
    </style>

    <style name="AppTheme.TextStyle.Subtitle2">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
<!--        <item name="android:textSize">14sp</item>-->

    <style name="AppTheme.TextStyle.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.15</item>

    </style>

    <style name="AppTheme.TextStyle.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="AppTheme.TextStyle.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.14</item>
    </style>

    <style name="AppTheme.TextStyle.OVERLINE">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.5</item>
    </style>
    
    <style name="LatoBold24">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BsHeadingBold12">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">7.1sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="LatoBold14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">5.1sp</item>
    </style>

    <style name="BsHeadingBold22">
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">7.1sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="LatoWhiteHeading">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">20.9sp</item>
    </style>

    <style name="ProfileName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">20.9sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LatoWhiteRegular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="LatoWhiteBottom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="LatoRegularCardText12">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">#6f6f6f</item>
    </style>

    <style name="LipstickCardBottom">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#d72467</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="NumberBoldText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:lineSpacingExtra">22.9sp</item>
    </style>

    <style name="LargeRegularText">
        <item name="android:textSize">8.6sp </item>
        <item name="android:textColor">#222222</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:lineSpacingExtra">32.2sp</item>
    </style>


    <!--<style name="AppTheme.BaseButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">1.25</item>
    </style>-->

    <style name="AppTheme.TextStyle.SectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">900</item>
    </style>

    <style name="text_pagetitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:colorPrimaryDark">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="PhotoCrop" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/topBarDark</item>
        <item name="android:statusBarColor">@color/grey_photocrop_background</item>
        <!--        windowbackground is loaded first, then colorBackground takes over. Both are needed to avoid flickering-->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottomsheet</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorLigthSeparater</item>
    </style>

    <style name="LatoRegular16Black">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:lineSpacingExtra">19.1sp</item>
        <item name="android:textColor">#222222</item>
    </style>
    <style name="LatoRegular8">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.14</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="loginbuttontheme" parent="AppTheme">
        <item name="colorPrimary">@drawable/app_gradient_button</item>
    </style>

    <style name="button_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/app_gradient_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="tint">@android:color/transparent</item>
        <item name="tintMode">add</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="LatoWhite16" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#fefefe</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LatoWhite28" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#fefefe</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="LatoBold16" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#d9000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LatoBold18" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ca0071</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="LatoRegular14Black" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_style_disable" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#888888</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlActivated">#ffc107</item>
    </style>
    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>
