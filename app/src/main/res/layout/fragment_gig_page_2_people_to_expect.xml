<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">


    <ImageView
        android:id="@+id/gig_people_to_expect_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_group_pink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/gig_people_to_expect_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0.02"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/gig_people_to_expect_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/people_to_except" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/people_to_expect_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="@color/colorPrimary"
        android:layout_marginTop="12dp"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/gig_people_to_expect_label"/>

</androidx.constraintlayout.widget.ConstraintLayout>