<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.gigPage.GigPageFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Retail Sales Executive"
            app:titleTextColor="@color/black" />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appBar">

        <ImageView
            android:id="@+id/gigBannerImageIV"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:src="@drawable/bg_gig_type"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/companyLogoIV"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gigBannerImageIV" />


        <TextView
            android:id="@+id/roleNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_bold"
            android:letterSpacing="0"
            android:text="Dyehfyhgef"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/companyLogoIV"
            app:layout_constraintTop_toBottomOf="@+id/gigBannerImageIV" />


        <TextView
            android:id="@+id/companyNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/lato"
            android:letterSpacing="0"
            android:text="Dyehfyhgef"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/companyLogoIV"
            app:layout_constraintTop_toBottomOf="@+id/roleNameTV" />

        <TextView
            android:id="@+id/gigTypeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/lato"
            android:letterSpacing="0"
            android:text="On- Site"
            android:textColor="#d9000000"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toEndOf="@+id/companyLogoIV"
            app:layout_constraintTop_toBottomOf="@+id/companyNameTV" />

        <TextView
            android:id="@+id/gigIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:letterSpacing="0"
            android:text="Gig Id: 23930344"
            android:textColor="@color/lipstick"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/companyNameTV"
            app:layout_constraintEnd_toEndOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>