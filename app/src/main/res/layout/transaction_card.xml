<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/wallet"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/t_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Title"
            style="@style/LatoRegular14Black"
            android:layout_marginTop="18dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/t_timings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timings"
            android:layout_marginStart="5dp"
            style="@style/LatoRegularCardText12"
            app:layout_constraintTop_toBottomOf="@id/t_title"
            app:layout_constraintStart_toStartOf="@id/t_title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/t_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 10000"
            style="@style/LatoRegular16Black"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@id/t_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/t_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            android:textColor="#468800"
            style="@style/LatoRegularCardText12"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/t_amount"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>