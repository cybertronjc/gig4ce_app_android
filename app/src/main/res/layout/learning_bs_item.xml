<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="148dp"
    android:layout_marginLeft="18dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/size_10"
        android:layout_height="match_parent">

        <com.gigforce.common_ui.widgets.RoundCornerImageView
            android:id="@+id/learning_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:scaleType="centerCrop"
            app:sriv_right_top_corner_radius="@dimen/size_4"
            app:sriv_left_top_corner_radius="@dimen/size_4"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Module 1"
            android:textColor="#000000"
            android:textSize="10sp"
            android:layout_marginLeft="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_" />

        <ImageView
            android:id="@+id/completed_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
              app:srcCompat="@drawable/ic_gig_success_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/title_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="CASHIER"
            android:textColor="#000000"
            android:textSize="14sp"

            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/learning_img" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>