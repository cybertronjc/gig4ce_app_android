<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:context="com.gigforce.verification.gigerVerfication.drivingLicense.AddDrivingLicenseInfoFragment">


        <TextView
            android:id="@+id/drivingLicenseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/lato_bold"
            android:letterSpacing="0"
            android:text="@string/driving_license"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/helpIconIV"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="13dp"
            android:clickable="true"
            android:focusable="true"
              app:srcCompat="@drawable/ic_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/whyWeNeedThisTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/lato"
            android:letterSpacing="-0.01"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/why_do_we_need_this"
            android:textColor="@color/battle_ship_grey"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/helpIconIV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/doYouHaveDLLabel_client_act"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/size_16"
            android:fontFamily="@font/lato"
            android:letterSpacing="-0.01"
            android:text="@string/do_you_have_driving_license"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drivingLicenseLabel" />


        <TextView
            android:id="@+id/dlEditOverallErrorMessage_client_act"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/size_16"
            android:fontFamily="@font/lato"
            android:letterSpacing="0"
            android:textColor="@color/app_red"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/doYouHaveDLLabel_client_act"
            tools:text="Error : Uploaded Image is not a Driving License Image" />


        <RadioGroup
            android:id="@+id/dlAvailaibilityOptionRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/doYouHaveDLLabel_client_act">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/dlYesRB"
                style="@style/Theme.RadioButtonLipstickPink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="@string/yes_i_have_driving_license" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/dlNoRB"
                style="@style/Theme.RadioButtonLipstickPink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="@string/no_i_don_t_have_driving_license" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/ll_no_driving_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dlAvailaibilityOptionRG">

            <RelativeLayout
                android:id="@+id/rl_no_dl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginTop="@dimen/size_22"
                android:layout_marginEnd="@dimen/size_16"
                android:background="#d8d8d8">

                <TextView
                    android:id="@+id/tv_no_driving_cert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_11"
                    android:layout_marginTop="@dimen/size_15"
                    android:layout_marginEnd="@dimen/size_9"
                    android:layout_marginBottom="@dimen/size_27"
                    android:background="@drawable/ic_time_upload_driving_cert"
                    android:gravity="center"
                    android:text=" ? "
                    android:textColor="@color/lipstick"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_12"
                    android:layout_marginEnd="@dimen/size_17"
                    android:layout_marginBottom="@dimen/size_9"
                    android:layout_toEndOf="@+id/tv_no_driving_cert"
                    android:fontFamily="@font/lato"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.01"
                    android:text="@string/driving_license_is_mandatory_for_the_driver_role_you_will_not_be_eligible_to_submit_application"
                    android:textColor="@color/battleship_grey"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <!--        <TextView-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginStart="@dimen/size_16"-->
            <!--            android:layout_marginTop="@dimen/size_16"-->
            <!--            android:layout_marginEnd="@dimen/size_23"-->
            <!--            android:fontFamily="@font/lato"-->
            <!--            android:text="@string/note_it_is_mandatory_to_submit_required_docs_at_time_of_driving_test"-->
            <!--            android:textColor="@color/black"-->
            <!--            android:textSize="12sp"-->
            <!--            android:textStyle="normal" />-->
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dlInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/dlAvailaibilityOptionRG">

            <View
                android:id="@+id/topSeaparator"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:background="#cdccd1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato"
                android:letterSpacing="-0.01"
                android:text="@string/please_confirm_the_following_information"
                android:textColor="@color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/stateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/state_pascal_case"
                    android:textSize="12sp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dobET" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/stateSpinner"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_9"
                    android:background="@drawable/border_26_979797_rad_2"
                    android:minHeight="@dimen/size_48"
                    android:paddingStart="@dimen/size_9"
                    android:paddingTop="10dp"
                    android:paddingEnd="@dimen/size_11"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/genderLabel" />

                <TextView
                    android:id="@+id/dlStateEditErrorMessage_client_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0"
                    android:textColor="@color/app_red"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dlNoTV"
                    tools:text="Error : Uploaded Image is not a Driving License Image" />


                <TextView
                    android:id="@+id/dlNoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/lato"
                    android:text="@string/dl_hint_square_bracket"
                    android:textSize="12sp" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/drivingLicenseEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_9"
                    android:background="@drawable/border_27979797_rad_4"
                    android:hint="@string/enter_driving_license_number"
                    android:imeActionLabel="Done"
                    android:imeOptions="actionGo"
                    android:inputType="textNoSuggestions"
                    android:letterSpacing="0"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:paddingStart="@dimen/size_9"
                    android:paddingTop="@dimen/size_10"

                    android:paddingEnd="@dimen/size_16"
                    android:paddingBottom="@dimen/size_9"
                    android:textAllCaps="true"
                    android:textColorHint="@color/warm_grey_two"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/dlNoEditErrorMessage_client_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0"
                    android:textColor="@color/app_red"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dlNoTV"
                    tools:text="Error : Uploaded Image is not a Driving License Image" />


            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/topSeaparator2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="#cdccd1"
            app:layout_constraintTop_toBottomOf="@id/dlInfoLayout" />

        <include
            android:id="@+id/dlFrontImageHolder"
            layout="@layout/image_uploader_driving_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_16"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/topSeaparator2" />


        <TextView
            android:id="@+id/dlFrontEditErrorMessage_client_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/lato"
            android:letterSpacing="0"

            android:textColor="@color/app_red"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dlFrontImageHolder"
            tools:text="Error : Uploaded Image is not a Driving License Image" />


        <include
            android:id="@+id/dlBackImageHolder"
            layout="@layout/image_uploader_driving_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginTop="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_16"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/dlFrontEditErrorMessage_client_act" />


        <TextView
            android:id="@+id/dlBackEditErrorMessage_client_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/lato"
            android:letterSpacing="0"
            android:textColor="@color/app_red"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dlBackImageHolder"
            tools:text="Error : Uploaded Image is not a Driving License Image" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/dlSubmitSliderBtn_client_act"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:elevation="5dp"
            android:fontFamily="@font/lato"
            android:text="@string/save_all_caps"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/confirmDLDataCB_client_act"
            style="@style/Theme.CheckBoxLipstickPink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/lato"
            android:letterSpacing="0"
            android:text="@string/yes_i_confirm_the_data_is_correct"
            app:layout_constraintBottom_toTopOf="@id/dlSubmitSliderBtn_client_act"
            app:layout_constraintTop_toBottomOf="@id/dlBackEditErrorMessage_client_act"
            app:layout_constraintVertical_bias="0.98"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
