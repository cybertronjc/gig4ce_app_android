<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_exp_white_rect">

    <com.gigforce.app.modules.profile.ProfileCardBackground
        android:id="@+id/experience_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/experience_nav_to_education" />

    <com.gigforce.app.modules.profile.TopProfileBar
        android:id="@+id/experience_top_profile"
        android:layout_height="138dp"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </com.gigforce.app.modules.profile.TopProfileBar>

    <TextView
        android:id="@+id/experience_nav_to_about"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_nav"
        android:minHeight="50dp"
        android:text="@string/nav_about_text"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/experience_top_profile" />

    <TextView
        android:id="@+id/experience_nav_to_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_nav"
        android:minHeight="50dp"
        android:text="@string/nav_education_text"
        app:layout_constraintStart_toEndOf="@+id/experience_nav_to_about"
        app:layout_constraintTop_toBottomOf="@+id/experience_top_profile" />


    <TextView
        android:id="@+id/profile_nav_to_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_nav_color"
        android:minHeight="50dp"
        android:text="@string/nav_experience_text"
        app:layout_constraintStart_toEndOf="@+id/experience_nav_to_education"
        app:layout_constraintTop_toBottomOf="@+id/experience_top_profile" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_nav"
        android:minHeight="50dp"
        android:text="@string/nav_gigs_text"
        app:layout_constraintStart_toEndOf="@+id/profile_nav_to_experience"
        app:layout_constraintTop_toBottomOf="@+id/experience_top_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>