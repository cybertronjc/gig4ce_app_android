<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/checkInCheckOutSliderBtn"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:elevation="5dp"
        app:border_radius="8dp"
        app:inner_color="@color/lipstick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:outer_color="@color/light_pink"
        app:slider_height="60dp"
        app:slider_icon="@drawable/ic_arrow_forward_white"
        app:slider_icon_color="@color/white"
        app:text="Check - in"
        app:text_size="16sp"
        app:text_style="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="80dp"
                app:layout_constraintTop_toTopOf="parent">

                <include
                    android:id="@+id/gig_page_top_bar"
                    layout="@layout/fragment_gig_page_2_toolbar" />

                <include
                    android:id="@+id/gig_page_timer_layout"
                    layout="@layout/fragment_gig_page_2_timer_layout" />

                <include
                    android:id="@+id/gig_page_completiton_layout"
                    android:visibility="gone"
                    layout="@layout/fragment_gig_page_2_completiton_payment_details" />


                <include layout="@layout/fragment_gig_page_2_gig_type" />

                <include layout="@layout/fragment_gig_page_2_address" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#e4e4e4" />


                <include
                    android:id="@+id/people_to_expect_layout"
                    layout="@layout/fragment_gig_page_2_people_to_expect" />

                <View
                    android:id="@+id/divider_below_people_to_expect"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#e4e4e4" />

                <include
                    android:id="@+id/payment_info"
                    layout="@layout/fragment_gig_page_2_payment_info" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="16dp"
                    android:background="#e4e4e4" />

                <include layout="@layout/fragment_gig_page_2_other_options" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>