<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timer_root_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/gig_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Today , 09 July 2020" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/status_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/gig_status_iv"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_status_pending" />

                <TextView
                    android:id="@+id/gig_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_85"
                    android:textSize="12sp"
                    tools:text="Status" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:id="@+id/timer_and_attendance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/status_card_view"
            >

            <TextView
                android:id="@+id/gig_timer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lato"
                android:letterSpacing="0"
                android:textColor="@color/black_85"
                android:textSize="24sp"
                tools:text="00hrs : 20 mins" />

            <TextView
                android:id="@+id/gig_checkin_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lato"
                android:letterSpacing="0"
                android:textColor="@color/black_85"
                android:textSize="12sp"
                tools:text="00hrs : 20 mins" />

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gig_attendance_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/status_card_view">

            <View
                android:id="@+id/view40"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#979797"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/presentGigcheckInIV"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:layout_marginStart="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_check_in_green" />


            <TextView
                android:id="@+id/presentGigPunchInLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:letterSpacing="0"
                android:text="Check In :"
                android:textColor="@color/black_85"
                app:layout_constraintEnd_toStartOf="@+id/view40"
                app:layout_constraintStart_toEndOf="@id/presentGigcheckInIV"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/presentGigpunchInTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:letterSpacing="0"
                android:text="--:--:--"
                android:textColor="@color/black_85"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/view40"
                app:layout_constraintStart_toEndOf="@+id/presentGigcheckInIV"
                app:layout_constraintTop_toBottomOf="@id/presentGigPunchInLabel" />


            <ImageView
                android:id="@+id/presentGigCheckOutIV"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_checkout" />


            <TextView
                android:id="@+id/presentGigPunchOutLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:letterSpacing="0"
                android:text="Check Out :"
                android:textColor="@color/black_85"
                app:layout_constraintEnd_toStartOf="@id/presentGigCheckOutIV"
                app:layout_constraintStart_toEndOf="@+id/view40"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/presentGigpunchOutTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:letterSpacing="0"
                android:text="--:--:--"
                android:textColor="@color/black_85"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@id/presentGigCheckOutIV"
                app:layout_constraintStart_toEndOf="@+id/view40"
                app:layout_constraintTop_toBottomOf="@id/presentGigPunchOutLabel" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>