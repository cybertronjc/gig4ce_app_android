<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/monthly_earning"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#f7f7f7"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_monthly_earning"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/monthly_earning_card_title"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Monthly Earning"
            android:layout_marginTop="12dp"
            android:layout_marginStart="60dp"
            style="@style/LatoRegular16Black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/monthly_earning_card_text"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Current month"
            android:layout_marginTop="40dp"
            android:layout_marginStart="60dp"
            style="@style/LatoRegularCardText12" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/monthly_earning_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="244dp"
            android:text="Rs 1000"
            style="@style/LatoBold18"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            style="@style/IconOnlyButton"
            app:icon="@drawable/ic_forward"
            android:layout_marginStart="324dp"
            android:layout_gravity="center_vertical"
            app:iconTint="@color/gray_color"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/invoice_due"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#f7f7f7"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/monthly_earning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_invoice_status"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp" />
        
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/invoice_due_card_title"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Invoice Status"
            android:layout_marginTop="12dp"
            android:layout_marginStart="60dp"
            style="@style/LatoRegular16Black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/invoice_due_card_text"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text=""
            android:layout_marginTop="40dp"
            android:layout_marginStart="60dp"
            style="@style/LatoRegularCardText12" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/invoice_status_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="244dp"
            android:text="Rs 1000"
            style="@style/LatoBold18"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            style="@style/IconOnlyButton"
            app:icon="@drawable/ic_forward"
            android:layout_marginStart="324dp"
            android:layout_gravity="center_vertical"
            app:iconTint="@color/gray_color"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/payment_dispute"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#f7f7f7"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/invoice_due"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_payment_dispute"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/payment_dispute_card_title"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Payment Dispute"
            android:layout_marginTop="12dp"
            android:layout_marginStart="60dp"
            style="@style/LatoRegular16Black" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/payment_dispute_card_text"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Last updated, 17 June 2020"
            android:layout_marginTop="40dp"
            android:layout_marginStart="60dp"
            style="@style/LatoRegularCardText12" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/payment_dispute_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="244dp"
            android:text="Rs 1000"
            style="@style/LatoBold18"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            style="@style/IconOnlyButton"
            app:icon="@drawable/ic_forward"
            android:layout_marginStart="324dp"
            android:layout_gravity="center_vertical"
            app:iconTint="@color/gray_color"/>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>