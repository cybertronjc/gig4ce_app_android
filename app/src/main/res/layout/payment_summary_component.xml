<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/monthly_earning"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#f7f7f7"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/me_ic"
                android:layout_width="44dp"
                android:layout_height="44dp"
                  app:srcCompat="@drawable/ic_monthly_earning"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/monthly_earning_card_title"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="Monthly Earning"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                style="@style/LatoRegular16Black"
                app:layout_constraintStart_toEndOf="@id/me_ic"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/monthly_earning_card_text"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="June"
                android:layout_marginTop="8dp"
                style="@style/LatoRegularCardText12"
                app:layout_constraintTop_toBottomOf="@id/monthly_earning_card_title"
                app:layout_constraintStart_toStartOf="@id/monthly_earning_card_title"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/monthly_earning_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:text="Rs 1000"
                app:layout_constraintEnd_toStartOf="@id/me_ic_forward"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/LatoBold18"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/me_ic_forward"
                android:layout_width="10dp"
                android:layout_height="12dp"
                style="@style/IconOnlyButton"
                app:icon="@drawable/ic_forward"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                app:iconTint="@color/gray_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/payment_dispute"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#f7f7f7"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/monthly_earning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/payment_ic"
                android:layout_width="44dp"
                android:layout_height="44dp"
                  app:srcCompat="@drawable/ic_payment_dispute"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/payment_dispute_card_title"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="Payment Dispute"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                style="@style/LatoRegular16Black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/payment_ic"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/payment_dispute_card_text"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="Last updated, 23 June 2020"
                android:layout_marginTop="8dp"
                style="@style/LatoRegularCardText12"
                app:layout_constraintTop_toBottomOf="@id/payment_dispute_card_title"
                app:layout_constraintStart_toStartOf="@id/payment_dispute_card_title"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/payment_dispute_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:text="Rs 1000"
                style="@style/LatoBold18"
                app:layout_constraintEnd_toStartOf="@id/payment_ic_forward"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/payment_ic_forward"
                android:layout_width="10dp"
                android:layout_height="12dp"
                style="@style/IconOnlyButton"
                app:icon="@drawable/ic_forward"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                app:iconTint="@color/gray_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/invoice_due"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#f7f7f7"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/payment_dispute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/invoice_ic"
            android:layout_width="44dp"
            android:layout_height="44dp"
              app:srcCompat="@drawable/ic_invoice_status"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
            android:id="@+id/invoice_due_card_title"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Invoice Status"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            style="@style/LatoRegular16Black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/invoice_ic"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/invoice_due_card_text"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text=""
            android:layout_marginTop="8dp"
            android:layout_marginStart="60dp"
            style="@style/LatoRegularCardText12"
            app:layout_constraintTop_toBottomOf="@id/invoice_due_card_title"
            app:layout_constraintStart_toStartOf="@id/invoice_due_card_title"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/invoice_ic_forward"
            android:layout_width="10dp"
            android:layout_height="12dp"
            style="@style/IconOnlyButton"
            app:icon="@drawable/ic_forward"
            android:layout_marginEnd = "8dp"
            android:layout_gravity="center_vertical"
            app:iconTint="@color/gray_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>