<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.gigerVerfication.panCard.AddPanCardInfoFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Giger Verification"
            app:titleTextColor="@color/black" />
    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/selfieVideoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0"
        android:text="@string/selfie_video"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar" />

    <ImageView
        android:id="@+id/helpIconIV"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="13dp"
        android:src="@drawable/ic_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginRight="4dp"
        android:letterSpacing="-0.01"
        android:text="@string/how_to_record_selfie_video"
        android:textColor="@color/battle_ship_grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/helpIconIV"
        app:layout_constraintTop_toBottomOf="@id/appBar" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selfieVideoLabel">


        <RelativeLayout
            android:id="@+id/cameraViewContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <com.otaliastudios.cameraview.CameraView
                android:id="@+id/cameraView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:keepScreenOn="true"
                android:orientation="vertical"
                app:cameraAudio="off"
                app:cameraAutoFocusMarker="@string/cameraview_default_autofocus_marker"
                app:cameraEngine="camera2"
                app:cameraExperimental="true"
                app:cameraFacing="front"
                app:cameraFlash="auto"
                app:cameraGestureTap="autoFocus"
                app:cameraMode="video"
                app:cameraPlaySounds="true"
                app:cameraPreview="glSurface"
                app:elevation="5dp" />

            <LinearLayout
                android:id="@+id/cameraControlsLayout"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true"
                android:background="#51000000"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/recordVideoButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/ic_record" />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/cameraControlsLayout"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7dp"
                app:cardBackgroundColor="#51000000"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#51000000"
                        android:src="@drawable/ic_record" />

                    <TextView
                        android:id="@+id/countDownTimerTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/lato"
                        android:text="00:05"
                        android:background="#51000000"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/uploadingVideoContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Uploading Video..."
                android:textColor="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/videoPlayerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <fragment
                android:id="@+id/selfieVideoPlayerFragment"
                android:name="com.gigforce.app.modules.gigerVerfication.selfieVideo.PlayVideoFragment"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:controller_layout_id="@layout/fragment_play_video_controls" />

        </LinearLayout>

    </FrameLayout>


    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/selfieVideoSubmitSliderBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:border_radius="8dp"
        app:inner_color="#888888"
        app:layout_constraintBottom_toBottomOf="parent"
        app:outer_color="#dddddd"
        app:slider_height="60dp"
        app:slider_icon="@drawable/ic_arrow_forward_white"
        app:slider_icon_color="@color/white"
        app:text="SAVE" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/selfieVideoCorrectCB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="18dp"
        android:text="@string/yes_i_confirm_the_data_is_correct"
        app:layout_constraintBottom_toTopOf="@id/selfieVideoSubmitSliderBtn"
        app:layout_constraintVertical_bias="0.98"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>