<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_questionnaire"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_37"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <TextView
        android:id="@+id/tv_cities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_61979797_rad_4"
        android:minHeight="@dimen/size_48"
        android:paddingStart="@dimen/size_16"
        app:drawableEndCompat="@drawable/ic_down"
        android:gravity="center|start"
        android:paddingTop="@dimen/size_17"
        android:paddingEnd="@dimen/size_36"
        android:paddingBottom="@dimen/size_16"
        />


    <ProgressBar
        android:id="@+id/pb_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>