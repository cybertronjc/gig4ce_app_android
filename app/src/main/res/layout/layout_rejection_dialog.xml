<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rectangle_rad_5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/size_202"
            android:layout_height="@dimen/size_131"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/size_50"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginEnd="@dimen/size_60"
            app:srcCompat="@drawable/ic_rejected" />

        <TextView
            android:id="@+id/tv_content_title_rejection_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginTop="@dimen/size_36"
            android:layout_marginEnd="@dimen/size_16"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:letterSpacing="-0.05"
            android:text="@string/no_worries"
            android:textColor="#dd2865"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_wrong_questions_rejection_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_sub_one_rejection_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_51"
            android:layout_marginTop="@dimen/size_14"
            android:layout_marginEnd="@dimen/size_51"
            android:fontFamily="@font/lato"
            android:gravity="center_horizontal"
            android:text="@string/you_can_reapply_for_this_role_once_you_are_eligible_we_are_always_here_to_help_you"
            android:textColor="@color/black_85"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_sub_two_rejection_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_38"
            android:layout_marginTop="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_32"
            android:fontFamily="@font/lato"
            android:gravity="center_horizontal"
            android:text="@string/meanwhile_you_can_refer_your_contacts_who_can_be_eligible_for_this_role"
            android:textColor="@color/black_85"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_refer_rejection_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/size_15"
            android:layout_marginTop="@dimen/size_22"
            android:layout_marginEnd="@dimen/size_15"
            android:background="@drawable/ic_rectangle_copy"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:minHeight="@dimen/size_36"

            android:text="@string/refer_a_friend"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_take_me_home_rejection_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_26"
            android:fontFamily="@font/lato"
            android:text="@string/take_me_to_home"
            android:textColor="@color/lipstick"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>