<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="18dp"
    android:paddingTop="12dp"
    android:paddingBottom="8dp">


    <ImageView
        android:id="@+id/iv_options_rv_enrolled_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/size_16"
        app:srcCompat="@drawable/ic_three_dots"
        app:tint="@color/black_85" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:srcCompat="@drawable/ic_user_2" />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:textColor="#646464"
        android:layout_toStartOf="@id/iv_options_rv_enrolled_users"
        android:layout_toEndOf="@id/image_view"
        android:fontFamily="@font/lato_bold"
        android:textSize="16sp"
        tools:text="Sumit Verma" />

    <ImageView
        android:id="@+id/status_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_toLeftOf="@id/user_name_tv"
        app:srcCompat="@drawable/ic_done" />

    <TextView
        android:id="@+id/user_added_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_tv"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/image_view"
        android:fontFamily="@font/lato"
        android:lineSpacingExtra="2sp"
        android:textColor="@color/dust_grey"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="Added 2 days ago" />


</RelativeLayout>