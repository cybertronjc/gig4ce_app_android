<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/add_achievement_sheet_new_achievement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_achievement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/add_achievement_sheet_title"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/add_achievement_authority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/add_achievement_sheet_issuing_authority"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/add_achievement_title"
        app:layout_constraintTop_toBottomOf="@+id/add_achievement_title" />

    <EditText
        android:id="@+id/add_achievement_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/add_achievement_sheet_location"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/add_achievement_authority"
        app:layout_constraintTop_toBottomOf="@+id/add_achievement_authority" />

    <EditText
        android:id="@+id/add_achievement_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/add_achievement_sheet_year"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/add_achievement_location"
        app:layout_constraintTop_toBottomOf="@+id/add_achievement_location" />

    <TextView
        android:id="@+id/add_achievement_add_more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/add_more_text"
        app:layout_constraintStart_toStartOf="@+id/add_achievement_year"
        app:layout_constraintTop_toBottomOf="@+id/add_achievement_year" />

    <Button
        android:id="@+id/add_achievement_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/cancel_text"
        app:layout_constraintStart_toStartOf="@+id/add_achievement_add_more_button"
        app:layout_constraintTop_toBottomOf="@+id/add_achievement_add_more_button" />

    <Button
        android:id="@+id/add_achievement_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/save_text"
        app:layout_constraintStart_toEndOf="@+id/add_achievement_cancel_button"
        app:layout_constraintTop_toBottomOf="@+id/add_achievement_add_more_button" />
</androidx.constraintlayout.widget.ConstraintLayout>