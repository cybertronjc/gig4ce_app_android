<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_contactDetails"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_backArrowInChat"
                android:layout_width="wrap_content"
                android:scaleType="centerCrop"

                android:layout_height="@dimen/size_16"
                android:layout_marginStart="@dimen/size_16"
                android:src="@drawable/ic_arrow_back_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/civ_personImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/size_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_backArrowInChat"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_nameValueInChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lato"
                android:text="NA"
                android:textColor="#d72467"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/civ_personImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Tap to View details"
                android:textColor="@color/gray_chat_module"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_nameValueInChat"
                app:layout_constraintTop_toBottomOf="@+id/tv_nameValueInChat" />

            <ImageView
                android:id="@+id/iv_verticalDots"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/size_16"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:visibility="gone"
                android:src="@drawable/ic_three_dots"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/group_deactivated_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_below="@+id/cv_contactDetails"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_blocked_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="This group is deactivated"
            android:textColor="@color/white" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/container_footer"
        android:layout_below="@+id/group_deactivated_container"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="#EFEFEF">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/container_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:background="@color/mdtp_white"
        android:gravity="center_vertical"
        android:minHeight="60dp">

        <ImageView
            android:id="@+id/iv_greyPlus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_marginStart="14dp"
            android:src="@drawable/ic_attachment_grey"
            />

        <EditText
            android:id="@+id/et_typedMessageValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/lato"
            android:hint="Type a message"
            android:textColor="#585858"
            android:textSize="17sp" />


        <ImageView
            android:id="@+id/iv_sendMessage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/ic_baseline_send_24" />
    </LinearLayout>

</RelativeLayout>