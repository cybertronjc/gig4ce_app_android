<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true">

    <ImageView
        android:id="@+id/profile_avatar"
        android:layout_width="360dp"
        android:layout_height="331dp"
        android:layout_marginBottom="407dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/pincodeview"
        android:layout_width="327dp"
        android:layout_height="77dp"
        android:layout_marginTop="292dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/profile_avatar"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/profile_avatar"
        app:layout_constraintTop_toTopOf="@+id/profile_avatar" />

    <TextView
        android:id="@+id/connection_count"
        android:layout_width="31dp"
        android:layout_height="41dp"
        android:layout_marginStart="247dp"
        android:layout_marginTop="305dp"
        android:layout_marginEnd="49dp"
        android:text="3"
        app:layout_constraintEnd_toEndOf="@+id/pincodeview"
        app:layout_constraintStart_toStartOf="@+id/pincodeview"
        app:layout_constraintTop_toTopOf="@+id/profile_avatar" />

    <TextView
        android:id="@+id/task_done"
        android:layout_width="34dp"
        android:layout_height="31dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="305dp"
        android:layout_marginEnd="142dp"
        android:text="17"
        app:layout_constraintEnd_toEndOf="@+id/pincodeview"
        app:layout_constraintStart_toStartOf="@+id/pincodeview"
        app:layout_constraintTop_toTopOf="@+id/profile_avatar" />

    <TextView
        android:id="@+id/gigger_rating"
        android:layout_width="34dp"
        android:layout_height="31dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="305dp"
        android:layout_marginEnd="247dp"
        android:text="4"
        app:layout_constraintEnd_toEndOf="@+id/pincodeview"
        app:layout_constraintStart_toStartOf="@+id/pincodeview"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/user_info_card"
        android:layout_width="360dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_avatar"
        app:layout_constraintStart_toStartOf="@+id/profile_avatar"
        app:layout_constraintTop_toBottomOf="@+id/pincodeview" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="360dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_avatar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/profile_avatar"
        app:layout_constraintTop_toBottomOf="@+id/user_info_card" />

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#E42C64"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_avatar"
        app:layout_constraintStart_toStartOf="@+id/profile_avatar"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />
</androidx.constraintlayout.widget.ConstraintLayout>