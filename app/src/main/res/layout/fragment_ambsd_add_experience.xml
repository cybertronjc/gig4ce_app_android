<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lipstick_two"
                android:gravity="center_vertical"
                android:minHeight="72dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ic_back_iv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ct_ic_arrow_back_white_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/lato"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="4sp"
                    android:text="Experience"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/breifing_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar_layout">

                <ImageView
                    android:layout_width="80dp"
                    android:src="@drawable/banner_users_grid"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:lineHeight="17sp"
                    android:lineSpacingExtra="3sp"
                    android:text="Glad to know about your interest. Give a bit more details to show best Gigs to you"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <TextView
                android:id="@+id/do_you_have_exp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/breifing_layout"
                android:text="Do you have experience in Delivery Executive ?" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/exp_chipgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                app:chipSpacingHorizontal="14dp"
                app:layout_constraintTop_toBottomOf="@id/do_you_have_exp_label"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/exp_yes"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="1dp"
                    android:text="Yes, I have an Experience" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/exp_no"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="1dp"
                    android:text="No I don't have" />


            </com.google.android.material.chip.ChipGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/exp_yes_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:visibility="gone"
                android:paddingEnd="16dp"

                app:layout_constraintTop_toBottomOf="@id/exp_chipgroup">

                <TextView
                    android:id="@+id/what_was_your_role_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="What was your role ? " />

                <Spinner
                    android:id="@+id/role_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:minHeight="40dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/rectangle_round_grey"
                    app:layout_constraintTop_toBottomOf="@id/what_was_your_role_label" />

                <EditText
                    android:id="@+id/company_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle_round_grey"
                    android:fontFamily="@font/lato"
                    android:hint="Company Name"
                    android:lineSpacingExtra="3sp"
                    android:minHeight="36dp"
                    android:paddingStart="8dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@id/role_spinner" />


                <TextView
                    android:id="@+id/start_date_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle_round_grey"
                    android:drawableEnd="@drawable/ic_calendar_month"
                    android:entries="@array/indian_states"
                    android:fontFamily="@font/lato"
                    android:gravity="center_vertical"
                    android:hint="Start Date"
                    android:lineSpacingExtra="3sp"
                    android:minHeight="36dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintEnd_toStartOf="@+id/end_date_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_name_et" />


                <TextView
                    android:id="@+id/end_date_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle_round_grey"
                    android:drawableEnd="@drawable/ic_calendar_month"
                    android:fontFamily="@font/lato"
                    android:gravity="center_vertical"
                    android:hint="End Date"
                    android:lineSpacingExtra="3sp"
                    android:minHeight="36dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/start_date_tv"
                    app:layout_constraintTop_toBottomOf="@id/company_name_et" />


                <CheckBox
                    android:id="@+id/currently_work_here_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:minHeight="36dp"
                    android:paddingStart="8dp"
                    android:text="Currently Working Here"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/start_date_tv" />


                <EditText
                    android:id="@+id/earning_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle_round_grey"
                    android:fontFamily="@font/lato"
                    android:hint="Earnings Per Day"
                    android:lineSpacingExtra="3sp"
                    android:inputType="number"
                    android:maxLength="8"
                    android:minHeight="36dp"
                    android:paddingStart="8dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@id/currently_work_here_checkbox" />


                <TextView
                    android:id="@+id/total_exp_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="20dp"
                    android:text="Total years of experience (years)"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/earning_et"
                    />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/total_exp_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="14dp"
                    app:layout_constraintTop_toBottomOf="@id/total_exp_label"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/exp_0_1"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="0 - 1" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/exp_1_3"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="1 - 3" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/exp_3_6"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="3 - 6" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/exp_above_6"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="6 +" />


                </com.google.android.material.chip.ChipGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/driver_question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/exp_yes_layout">

                <TextView
                    android:id="@+id/own_vechile_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="20dp"
                    android:text="Owning any vehicle?"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/earning_et"
                    />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/driver_own_vehicle_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="14dp"
                    app:layout_constraintTop_toBottomOf="@id/own_vechile_label"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/driver_option_car"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="Car" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/driver_option_truck"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="Truck" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/driver_option_auto"
                        style="@style/AppSingleChoiceChip2"
                        app:chipStrokeWidth="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autorickshaw" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/driver_option_bike"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="Bike" />


                </com.google.android.material.chip.ChipGroup>


                <TextView
                    android:id="@+id/vehicle_can_drive_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="20dp"
                    android:text="Which vehicle can you drive ?"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/earning_et"
                    />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/vehicle_can_drive_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="14dp"
                    app:layout_constraintTop_toBottomOf="@id/own_vechile_label"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/vehicle_can_drive_car"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="Car" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/vehicle_can_drive_truck"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="Truck" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/vehicle_can_drive_autorickshaw"
                        style="@style/AppSingleChoiceChip2"
                        app:chipStrokeWidth="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autorickshaw" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/vehicle_can_drive_bike"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="Bike" />


                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/delivery_exec_question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/driver_question_layout">

                <TextView
                    android:id="@+id/delivery_exec_question_vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="20dp"
                    android:text="Owning any vehicle?"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/earning_et"
                    />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/delivery_exec_own_vehicle_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="14dp"
                    app:layout_constraintTop_toBottomOf="@id/own_vechile_label"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/delivery_exec_car"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="Car" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/delivery_exec_bicycle"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="Truck" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/delivery_exec_scooty"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="Scooty" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/delivery_exec_option_bike"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="Bike" />


                </com.google.android.material.chip.ChipGroup>








            </LinearLayout>

            <LinearLayout
                android:id="@+id/helper_exec_question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/delivery_exec_question_layout">

                <TextView
                    android:id="@+id/helper_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="20dp"
                    android:text="Are you comfortable in lifting heavy goods(Around 15-20 kg)?"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/earning_et"
                    />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/helper_weight_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="14dp"
                    app:layout_constraintTop_toBottomOf="@id/own_vechile_label"
                    app:singleSelection="true">


                    <com.google.android.material.chip.Chip
                        android:id="@+id/option_weight_yes"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="Yes" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/option_weight_no"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="No" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/gradient_button"
        android:enabled="true"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ambsd_guildliness_on_success_container" />


</FrameLayout>