<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/skip_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14dp"
        android:enabled="true"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:text="@string/skip"
        app:layout_constraintBottom_toBottomOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/gradient_button"
        android:enabled="true"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/skip_btn" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/submitBtn"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lipstick_two"
                android:gravity="center_vertical"
                android:minHeight="72dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ic_back_iv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                      app:srcCompat="@drawable/ct_ic_arrow_back_white_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/lato"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/experience"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/breifing_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar_layout">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                      app:srcCompat="@drawable/banner_users_grid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:lineHeight="17sp"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/glad_to_know_about_your_interest_give_a_bit_more_details_to_show_best_gigs_to_you"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <TextView
                android:id="@+id/do_you_have_exp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/breifing_layout"
                tools:text="@string/do_you_have_experience_in_delivery_executive" />


            <TextView
                android:id="@+id/have_exp_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/do_you_have_exp_label"
                tools:text="Some Error" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/exp_chipgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                app:chipSpacingHorizontal="14dp"
                app:layout_constraintTop_toBottomOf="@id/have_exp_error"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/exp_yes"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="1dp"
                    android:text="@string/yes_i_have_an_experience" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/exp_no"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="1dp"
                    android:text="@string/no_i_don_t_have" />


            </com.google.android.material.chip.ChipGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/exp_yes_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone"

                app:layout_constraintTop_toBottomOf="@id/exp_chipgroup">

                <TextView
                    android:id="@+id/what_was_your_role_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/what_was_your_role" />

                <Spinner
                    android:id="@+id/role_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rectangle_round_grey"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    app:layout_constraintTop_toBottomOf="@id/what_was_your_role_label" />

                <TextView
                    android:id="@+id/role_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/role_spinner"
                    tools:text="Some Error" />


                <EditText
                    android:id="@+id/company_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle_round_grey"
                    android:fontFamily="@font/lato"
                    android:hint="Company Name"
                    android:lineSpacingExtra="3sp"
                    android:minHeight="36dp"
                    android:paddingStart="8dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@id/role_error" />

                <TextView
                    android:id="@+id/company_name_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_name_et"
                    tools:text="Some Error" />


                <TextView
                    android:id="@+id/start_date_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle_round_grey"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_calendar_month"
                    android:entries="@array/indian_states"
                    android:focusable="true"
                    android:fontFamily="@font/lato"
                    android:gravity="center_vertical"
                    android:hint="Start Date"
                    android:lineSpacingExtra="3sp"
                    android:minHeight="36dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/end_date_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_name_error" />

                <TextView
                    android:id="@+id/start_date_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/start_date_tv"
                    tools:text="Some Error" />


                <TextView
                    android:id="@+id/end_date_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle_round_grey"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_calendar_month"
                    android:focusable="true"
                    android:fontFamily="@font/lato"
                    android:gravity="center_vertical"
                    android:hint="End Date"
                    android:lineSpacingExtra="3sp"
                    android:minHeight="36dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/start_date_tv"
                    app:layout_constraintTop_toBottomOf="@id/company_name_error" />


                <TextView
                    android:id="@+id/end_date_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/start_date_tv"
                    app:layout_constraintTop_toBottomOf="@id/start_date_tv"
                    tools:text="Some Error" />


                <CheckBox
                    android:id="@+id/currently_work_here_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:minHeight="36dp"
                    android:paddingStart="8dp"
                    android:text="@string/currently_working_here"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/start_date_error" />

                <TextView
                    android:id="@+id/currently_working_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/currently_work_here_checkbox"
                    tools:text="Some Error" />


                <EditText
                    android:id="@+id/earning_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle_round_grey"
                    android:fontFamily="@font/lato"
                    android:hint="@string/earnings_per_day"
                    android:lineSpacingExtra="3sp"
                    android:inputType="number"
                    android:maxLength="8"
                    android:minHeight="36dp"
                    android:paddingStart="8dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@id/currently_working_error" />

                <TextView
                    android:id="@+id/earning_per_day_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/earning_et"
                    tools:text="Some Error" />


                <TextView
                    android:id="@+id/total_exp_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/total_years_of_experience_years"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/earning_per_day_error" />

                <TextView
                    android:id="@+id/total_exp_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/total_exp_label"
                    tools:text="Some Error" />


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/total_exp_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="14dp"
                    app:layout_constraintTop_toBottomOf="@id/total_exp_error"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/exp_0_1"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="@string/_0_1" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/exp_1_3"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="@string/_1_3" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/exp_3_6"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="@string/_3_6" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/exp_above_6"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="@string/_6" />


                </com.google.android.material.chip.ChipGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/driver_question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/exp_yes_layout">

                <TextView
                    android:id="@+id/own_vechile_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/owning_any_vehicle"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/earning_et" />

                <TextView
                    android:id="@+id/own_vehicles_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/own_vechile_label"
                    tools:text="Some Error" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/driver_own_vehicle_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="14dp"
                    app:layout_constraintTop_toBottomOf="@id/own_vehicles_error">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/driver_option_car"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Car"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/driver_option_truck"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Truck"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/driver_option_auto"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autorickshaw"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/driver_option_bike"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bike"
                        app:chipStrokeWidth="1dp" />


                </com.google.android.material.chip.ChipGroup>


                <TextView
                    android:id="@+id/vehicle_can_drive_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:text="Which vehicle can you drive ?"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/earning_et" />

                <TextView
                    android:id="@+id/driver_can_drive_vehicles_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vehicle_can_drive_label"
                    tools:text="Some Error" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/vehicle_can_drive_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="14dp"
                    app:layout_constraintTop_toBottomOf="@id/driver_can_drive_vehicles_error"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/vehicle_can_drive_car"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Car"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/vehicle_can_drive_truck"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Truck"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/vehicle_can_drive_autorickshaw"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autorickshaw"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/vehicle_can_drive_bike"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bike"
                        app:chipStrokeWidth="1dp" />


                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/delivery_exec_question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/driver_question_layout">

                <TextView
                    android:id="@+id/delivery_exec_question_vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:text="Owning any vehicle?"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/earning_et" />

                <TextView
                    android:id="@+id/delivery_exec_vehicles_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vehicle_can_drive_label"
                    tools:text="Some Error" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/delivery_exec_own_vehicle_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="14dp"
                    app:layout_constraintTop_toBottomOf="@id/delivery_exec_vehicles_error"
                    >

                    <com.google.android.material.chip.Chip
                        android:id="@+id/delivery_exec_car"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Car"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/delivery_exec_bicycle"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Truck"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/delivery_exec_scooty"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scooty"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/delivery_exec_option_bike"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bike"
                        app:chipStrokeWidth="1dp" />


                </com.google.android.material.chip.ChipGroup>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/helper_exec_question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/delivery_exec_question_layout">

                <TextView
                    android:id="@+id/helper_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:text="Are you comfortable in lifting heavy goods(Around 15-20 kg)?"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/earning_et" />

                <TextView
                    android:id="@+id/helper_question_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/helper_"
                    tools:text="Some Error" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/helper_weight_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="14dp"
                    app:layout_constraintTop_toBottomOf="@id/helper_question_error"
                    app:singleSelection="true">


                    <com.google.android.material.chip.Chip
                        android:id="@+id/option_weight_yes"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/option_weight_no"
                        style="@style/AppSingleChoiceChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        app:chipStrokeWidth="1dp" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>