<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.gigerVerfication.drivingLicense.AddDrivingLicenseInfoFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Giger Verification"
            app:titleTextColor="@color/black" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            tools:context=".modules.gigerVerfication.drivingLicense.AddDrivingLicenseInfoFragment">


            <TextView
                android:id="@+id/drivingLicenseLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/lato_bold"
                android:letterSpacing="0"
                android:text="@string/driving_license"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/helpIconIV"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/ic_time"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:letterSpacing="-0.01"
                android:text="@string/why_do_we_need_this"
                android:textColor="@color/battle_ship_grey"
                android:textSize="12sp"
                android:layout_marginTop="22dp"
                app:layout_constraintEnd_toStartOf="@+id/helpIconIV"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/doYouHaveDLLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/lato"
                android:letterSpacing="-0.01"
                android:text="@string/do_you_have_driving_license"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/drivingLicenseLabel" />

            <RadioGroup
                android:id="@+id/dlAvailaibilityOptionRG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/doYouHaveDLLabel">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/dlYesRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    style="@style/Theme.RadioButtonLipstickPink"
                    android:text="@string/yes_i_have_driving_license" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/dlNoRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    style="@style/Theme.RadioButtonLipstickPink"
                    android:text="@string/no_i_don_t_have_driving_license" />

            </RadioGroup>

            <include
                android:id="@+id/dlFrontImageHolder"
                layout="@layout/fragment_verification_image_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/dlAvailaibilityOptionRG" />


            <include
                android:id="@+id/dlBackImageHolder"
                layout="@layout/fragment_verification_image_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/dlFrontImageHolder" />

            <LinearLayout
                android:id="@+id/dlInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/dlBackImageHolder">

                <View
                    android:id="@+id/topSeaparator"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="22dp"
                    android:background="#cdccd1" />

                <LinearLayout
                    android:id="@+id/editDrivingLicenseInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="-0.01"
                        android:text="@string/please_confirm_the_following_information"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_pencil_edit" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/stateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="State"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dobET" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/stateSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:entries="@array/indian_states"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/genderLabel" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/drivingLicenseTextInputLayout"
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/drivingLicenseEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Driving License No"
                            android:imeActionLabel="Done"
                            android:imeOptions="actionGo"
                            android:inputType="textNoSuggestions"
                            android:maxLength="15"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </LinearLayout>


            <com.ncorti.slidetoact.SlideToActView
                android:id="@+id/dlSubmitSliderBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                app:border_radius="8dp"
                app:inner_color="#888888"
                app:layout_constraintBottom_toBottomOf="parent"
                app:outer_color="#dddddd"
                app:slider_height="60dp"
                app:slider_icon="@drawable/ic_arrow_forward_white"
                app:slider_icon_color="@color/white"
                app:text="SAVE" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/confirmDLDataCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="18dp"
                android:text="@string/yes_i_confirm_the_data_is_correct"
                app:layout_constraintBottom_toTopOf="@id/dlSubmitSliderBtn"
                app:layout_constraintTop_toBottomOf="@id/dlInfoLayout"
                app:layout_constraintVertical_bias="0.98"
                tools:layout_editor_absoluteX="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>
