<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt_contact_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_image_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat_overlay"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleY="0.8"
        android:scaleX="0.8"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:background="@color/light_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
          app:srcCompat="@drawable/ic_chat"
        android:scaleY="0.5"
        android:scaleX="0.5"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/chat_overlay"
        app:layout_constraintEnd_toEndOf="@+id/chat_overlay"
        app:layout_constraintStart_toStartOf="@+id/chat_overlay"
        app:layout_constraintTop_toTopOf="@+id/chat_overlay"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <TextView
        android:id="@+id/manager_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="normal"
        android:minHeight="@dimen/size_36"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/edittext_border_lipstick"
        android:text="Manager"
        app:layout_constraintEnd_toStartOf="@id/chat_overlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:textColor="@color/black_85"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@id/manager_text_view"
        app:layout_constraintStart_toEndOf="@id/user_image_iv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Paritosh Yadav" />

    <TextView
        android:id="@+id/last_online_time_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/warm_grey_two"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/user_image_iv"
        app:layout_constraintTop_toBottomOf="@id/user_name_tv"
        app:layout_constraintEnd_toStartOf="@id/manager_text_view"/>


</androidx.constraintlayout.widget.ConstraintLayout>