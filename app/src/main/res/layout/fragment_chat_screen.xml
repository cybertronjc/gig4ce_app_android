<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_contactDetails"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_backArrowInChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_arrow_back_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/first_member"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_backArrowInChat"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/civ_personImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_nameValueInChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lato"
                android:text="NA"
                android:textColor="#d72467"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/first_member"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_lastSeenValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textColor="@color/gray_chat_module"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_nameValueInChat"
                app:layout_constraintTop_toBottomOf="@+id/tv_nameValueInChat" />

            <ImageView
                android:id="@+id/iv_verticalDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_three_dots"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/container_footer"
        android:layout_below="@+id/cv_contactDetails"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="#EFEFEF">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/container_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/mdtp_white"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/iv_happyFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:src="@drawable/ic_baseline_sentiment_very_satisfied_24" />

        <EditText
            android:id="@+id/et_typedMessageValue"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/lato"
            android:hint="Type a message"
            android:textColor="#585858"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_greyPlus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            app:tint="@color/black"
            android:src="@drawable/ic_baseline_add_24" />

        <ImageView
            android:id="@+id/iv_sendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_send_24" />
    </LinearLayout>

</RelativeLayout>