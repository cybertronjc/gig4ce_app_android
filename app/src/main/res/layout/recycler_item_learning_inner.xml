<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginLeft="18dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/learning_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/learning_progress_progressbar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/gradient_progress"
            app:layout_constraintTop_toBottomOf="@+id/learning_img"
            android:progress="60"
            />

        <ImageView
            android:id="@+id/play_button_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_play_round_pink_bck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/learning_progress_progressbar"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="Module 1 of 4 "
            android:textColor="#000000"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato"
            app:layout_constraintStart_toEndOf="@id/play_button_imageview"
            app:layout_constraintTop_toBottomOf="@+id/title_" />

        <TextView
            android:id="@+id/time_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="0 Min"
            android:textColor="@color/warm_grey"
            android:textSize="10sp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_" />

        <TextView
            android:id="@+id/title_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="CASHIER"
            android:textColor="#000000"
            android:textSize="14sp"
            android:fontFamily="@font/lato"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/play_button_imageview"
            app:layout_constraintTop_toBottomOf="@+id/learning_progress_progressbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>