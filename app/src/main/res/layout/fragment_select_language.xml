<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_lang_opt"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="#b12582"
        android:text="@+id/title_lang"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24dp"
        tools:ignore="PrivateResource">
        <!--"@color/cardview_light_background"-->
        <TextView
            android:id="@+id/text_view_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/title_lang"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp" />
    </com.google.android.material.appbar.AppBarLayout>


    <RadioGroup
        android:id="@+id/groupradio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:paddingStart="25dp">

        <!--<androidx.cardview.widget.CardView
            android:id="@+id/inputContainer"
            android:windowSoftInputMode="stateHidden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:minHeight="50dp"
            android:padding="16dp"
            cardElevation="1dp"
            cardCornerRadius="10dp"
            tools:ignore="MissingConstraints"> -->
        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="14sp" />
        <!--        </androidx.cardview.widget.CardView> -->

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="हिंदी"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="తెలుగు"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="français"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="मराठी"
            android:textSize="14sp" />

    </RadioGroup>


    <ImageView
        android:id="@+id/nextbuttonLang"
        android:layout_width="56dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="13dp"
        app:srcCompat="@drawable/next_button" />

</RelativeLayout>
