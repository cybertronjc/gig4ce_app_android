<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="17dp"
    android:background="@drawable/gig_monthly_attendance_top_card_drawable">

    <ImageView
        android:id="@+id/gig_cross_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:tint="@color/white"
        android:src="@drawable/ic_cross_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        xmlns:tools="http://schemas.android.com/tools"
        />

    <ImageView
        android:id="@+id/gig_ellipses_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_ellipses"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/company_logo_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_location"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gig_cross_btn"
        />
    
    <TextView
        android:id="@+id/gig_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/gig_cross_btn"
        app:layout_constraintStart_toEndOf="@id/company_logo_iv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="24dp"
        android:letterSpacing="0"
        android:fontFamily="@font/lato_bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        tools:text="Some Post anMe"
        />

    <TextView
        android:id="@+id/gig_company_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/gig_title_tv"
        app:layout_constraintStart_toStartOf="@id/gig_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="\ufeff@ Procter &amp; Gamble" />

    <ImageView
        android:id="@+id/company_star_logo_tv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_star"
        app:layout_constraintTop_toBottomOf="@id/gig_company_name_tv"
        app:layout_constraintStart_toStartOf="@id/gig_title_tv"
        tools:text="\ufeff@ Procter &amp; Gamble" />

    <TextView
        android:id="@+id/company_rating_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_marginTop="6dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_star"
        app:layout_constraintTop_toBottomOf="@id/gig_company_name_tv"
        app:layout_constraintStart_toEndOf="@id/company_star_logo_tv"
        tools:text="4.3" />


</androidx.constraintlayout.widget.ConstraintLayout>