<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/skip_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14dp"
        android:enabled="true"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:minHeight="@dimen/size_36"
        android:text="@string/skip"
        app:layout_constraintBottom_toBottomOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/gradient_button"
        android:enabled="true"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:minHeight="@dimen/size_36"
        android:text="@string/next"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/skip_btn" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/submitBtn"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lipstick_two"
                android:gravity="center_vertical"
                android:minHeight="72dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ic_back_iv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/ct_ic_arrow_back_white_24dp" />

                <TextView
                    android:id="@+id/toolbar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/lato"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="4sp"
                    android:text="User Current Address"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/breifing_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar_layout">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/banner_users_grid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:lineHeight="17sp"
                    android:lineSpacingExtra="3sp"
                    android:text="Please share your location to show Gigs around you"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <EditText
                android:id="@+id/pin_code_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rectangle_round_grey"
                android:fontFamily="@font/lato"
                android:hint="Pin Code"
                android:inputType="number"
                android:lineSpacingExtra="3sp"
                android:maxLength="6"
                android:minHeight="36dp"
                android:paddingStart="10dp"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/breifing_layout" />

            <ImageView
                android:id="@+id/pin_code_okay_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/ic_done"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/pin_code_et"
                app:layout_constraintEnd_toEndOf="@id/pin_code_et"
                app:layout_constraintTop_toTopOf="@id/pin_code_et" />

            <TextView
                android:id="@+id/pin_code_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pin_code_et"
                tools:text="Some Error" />


            <EditText
                android:id="@+id/address_line_1_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rectangle_round_grey"
                android:fontFamily="@font/lato"
                android:hint="House No/ Street No *"
                android:lineSpacingExtra="3sp"
                android:minHeight="36dp"
                android:paddingStart="10dp"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/pin_code_error" />

            <TextView
                android:id="@+id/address_line_1_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_line_1_et"
                tools:text="Some Error" />

            <EditText
                android:id="@+id/address_line_2_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rectangle_round_grey"
                android:fontFamily="@font/lato"
                android:hint="Area / Village / Town *"
                android:lineSpacingExtra="3sp"
                android:minHeight="36dp"
                android:paddingStart="10dp"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/address_line_1_error" />


            <TextView
                android:id="@+id/address_line_2_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_line_2_et"
                tools:text="Some Error" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/state_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectangle_round_grey"
                android:fontFamily="@font/lato"
                android:hint="State"
                android:lineSpacingExtra="3sp"
                android:minHeight="36dp"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/city_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_line_2_error" />


            <TextView
                android:id="@+id/state_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/state_spinner"
                tools:text="Some Error" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/city_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rectangle_round_grey"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:minHeight="36dp"
                android:paddingStart="10dp"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/state_spinner"
                app:layout_constraintTop_toBottomOf="@id/address_line_2_error" />

            <TextView
                android:id="@+id/city_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/state_spinner"
                app:layout_constraintTop_toBottomOf="@id/state_spinner"
                tools:text="Some Error" />


            <TextView
                android:id="@+id/pref_distance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:text="Preferred distance from current address"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/state_error" />

            <SeekBar
                android:id="@+id/arround_current_add_seekbar"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:max="60"
                android:min="5"
                android:progressTint="@color/colorPrimary"
                android:thumbTint="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/pref_distance_label" />

            <TextView
                android:id="@+id/minDistanceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:text="5 KM"
                android:textColor="#787993"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/arround_current_add_seekbar"
                app:layout_constraintTop_toBottomOf="@+id/arround_current_add_seekbar" />

            <TextView
                android:id="@+id/maxDistanceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:text="60 KM"
                android:textColor="#787993"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/arround_current_add_seekbar"
                app:layout_constraintTop_toBottomOf="@+id/arround_current_add_seekbar" />

            <TextView
                android:id="@+id/seekbardependent"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="0dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/arround_current_add_seekbar"
                app:layout_constraintStart_toStartOf="@+id/arround_current_add_seekbar"
                app:layout_constraintTop_toBottomOf="@+id/arround_current_add_seekbar" />


            <TextView
                android:id="@+id/migrant_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:text="Are you a localite or Migrant Here* ?"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seekbardependent" />

            <TextView
                android:id="@+id/migrant_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/migrant_label"
                tools:text="Some Error" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/localite_migrant_chipgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                app:chipSpacingHorizontal="14dp"
                app:layout_constraintTop_toBottomOf="@id/migrant_error"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/migrant_no"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am Localite"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/migrant_yes"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am Migrant"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/permanent_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/localite_migrant_chipgroup">


                <TextView
                    android:id="@+id/permanent_address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/lato_bold"
                    android:lineSpacingExtra="3sp"
                    android:text="Permanent Address"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/permanent_state_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle_round_grey"
                    android:fontFamily="@font/lato"
                    android:hint="State"
                    android:lineSpacingExtra="3sp"
                    android:minHeight="36dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/permanent_city_spinner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/permanent_address_label" />

                <TextView
                    android:id="@+id/permanent_state_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/permanent_state_spinner"
                    tools:text="Some Error" />


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/permanent_city_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rectangle_round_grey"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:minHeight="36dp"
                    android:paddingStart="10dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/permanent_state_spinner"
                    app:layout_constraintTop_toBottomOf="@id/permanent_address_label" />

                <TextView
                    android:id="@+id/permanent_city_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/permanent_state_spinner"
                    app:layout_constraintTop_toBottomOf="@id/permanent_city_spinner"
                    tools:text="Some Error" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/ready_to_change_location_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:text="Are you ready to migrate in nearby cities?"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/permanent_address_layout" />

            <TextView
                android:id="@+id/ready_to_migrate_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ready_to_change_location_label"
                tools:text="Some Error" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/ready_to_change_location_chipgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:chipSpacingHorizontal="14dp"
                app:layout_constraintTop_toBottomOf="@id/ready_to_migrate_error"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_location_change_yes"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes, I am ready"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_location_change_no"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No, I am not"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>


            <TextView
                android:id="@+id/how_do_you_came_to_know_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="3sp"
                android:text="How do you came to know about your current job ?"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ready_to_change_location_chipgroup" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/how_do_you_came_to_know_chipgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:chipSpacingHorizontal="14dp"
                app:layout_constraintTop_toBottomOf="@id/how_do_you_came_to_know_label"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/how_do_you_came_to_know_local_vendor"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local Vendor"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/how_do_you_came_to_know_self"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Self"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/how_do_you_came_to_know_friends_relative"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friends/ Relative"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/how_do_you_came_to_know_others"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/how_do_you_came_to_know_not_working_right_now"
                    style="@style/AppSingleChoiceChip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Working Right Now"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>