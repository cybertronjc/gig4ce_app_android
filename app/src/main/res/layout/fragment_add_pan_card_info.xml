<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.gigerVerfication.panCard.AddPanCardInfoFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Giger Verification"
            app:titleTextColor="@color/black" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:paddingTop="22dp">

            <TextView
                android:id="@+id/panCardLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/lato_bold"
                android:letterSpacing="0"
                android:text="@string/pan_card"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/helpIconIV"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="13dp"
                android:src="@drawable/ic_time"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:letterSpacing="-0.01"
                android:text="@string/why_do_we_need_this"
                android:textColor="@color/battle_ship_grey"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/helpIconIV"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/doYouHavePanCardLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/lato"
                android:letterSpacing="-0.01"
                android:text="@string/do_you_have_pan_card"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/panCardLabel" />

            <RadioGroup
                android:id="@+id/panCardAvailaibilityOptionRG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/doYouHavePanCardLabel">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/panYesRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    style="@style/Theme.RadioButtonLipstickPink"
                    android:text="@string/yes_i_have_pan_card" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/panNoRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    style="@style/Theme.RadioButtonLipstickPink"
                    android:text="@string/no_i_don_t_have_pan_card" />

            </RadioGroup>

            <include
                android:id="@+id/panImageHolder"
                layout="@layout/fragment_verification_image_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/panCardAvailaibilityOptionRG" />

            <LinearLayout
                android:id="@+id/panInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/panImageHolder">

                <View
                    android:id="@+id/topSeaparator"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="22dp"
                    android:background="#cdccd1" />

                <LinearLayout
                    android:id="@+id/editPanInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="-0.01"
                        android:text="@string/please_confirm_the_following_information"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_pencil_edit" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_two"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/nameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="0"
                        android:text="@string/name_with_colon"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/nameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"

                        android:layout_toEndOf="@id/nameLabel"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="0"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        tools:text="Rahul Chaudhary" />


                    <TextView
                        android:id="@+id/fathersNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nameTV"

                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="0"
                        android:text="@string/father_s_name_with_colon"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fathersNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nameTV"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="12dp"
                        android:layout_toEndOf="@id/fathersNameLabel"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="0"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        tools:text="Rahul Sr. Chaudhary" />

                    <TextView
                        android:id="@+id/dobLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fathersNameTV"

                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="0"
                        android:text="@string/date_of_birth"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dobTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fathersNameTV"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="12dp"
                        android:layout_toEndOf="@id/dobLabel"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="0"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        tools:text="29/02/1990" />


                    <TextView
                        android:id="@+id/panLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dobTV"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="0"
                        android:text="@string/pan_with_colon"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/panNoTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dobTV"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="12dp"
                        android:layout_toEndOf="@id/panLabel"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="0"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        tools:text="29/02/1990" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/panstatusTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0"
                    android:textColor="#468800"
                    android:textSize="12sp"
                    tools:text="PAN is verified" />

            </LinearLayout>


            <com.ncorti.slidetoact.SlideToActView
                android:id="@+id/panSubmitSliderBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                app:border_radius="8dp"
                app:inner_color="#888888"
                app:layout_constraintBottom_toBottomOf="parent"
                app:outer_color="#dddddd"
                app:slider_icon_color="@color/white"
                app:slider_height="60dp"
                app:slider_icon="@drawable/ic_arrow_forward_white"
                app:text="SAVE"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/panDataCorrectCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="18dp"
                android:text="@string/yes_i_confirm_the_data_is_correct"
                app:layout_constraintBottom_toTopOf="@id/panSubmitSliderBtn"
                app:layout_constraintTop_toBottomOf="@id/panInfoLayout"
                app:layout_constraintVertical_bias="0.98"
                tools:layout_editor_absoluteX="0dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>