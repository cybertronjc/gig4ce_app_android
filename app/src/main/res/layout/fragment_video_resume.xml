<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.video_resume.VideoResumeFragment">

    <FrameLayout
        android:id="@+id/frame_video"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:layout_marginTop="168dp"
        android:background="#f2f2f2">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="65dp">

        </androidx.viewpager2.widget.ViewPager2>

        <LinearLayout
            android:id="@+id/dots_presenter"
            android:layout_width="91dp"
            android:layout_height="24dp"
            android:layout_below="@+id/viewpager"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="164dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="183dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal" />
    </FrameLayout>

    <Button
        android:id="@+id/button_video"
        android:layout_width="284dp"
        android:layout_height="36dp"
        android:layout_below="@+id/frame_video"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/button_video_rounded"
        android:text="@string/button_upload_video"
        android:textColor="@color/cardview_light_background"
        android:textSize="14sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/guidelines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_video"
        android:layout_alignParentStart="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="20dp"
        android:text="@string/guidelines_video_resume"
        android:textColor="#e94b81"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="136dp"
        android:text="@string/why_video_resume"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="25dp"
        android:text="@string/title_video_resume"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_marginStart="39dp"
        android:layout_marginTop="15dp"
        android:text="@string/desc1_video_resume"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_marginStart="39dp"
        android:layout_marginTop="2dp"
        android:text="@string/desc2_video_resume"
        android:textColor="#e94b81"
        android:textSize="12sp" />

    <Button
        android:id="@+id/play_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guidelines"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="167dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="102dp"
        android:text="Play" />
    <!--
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guidelines"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/play_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_video"
            android:layout_marginTop="3dp"
            android:text="Play VIDEO"
            android:textSize="20sp" />
    -->
</RelativeLayout>