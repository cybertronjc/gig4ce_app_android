<?xml version="1.0" encoding="utf-8"?>


    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">



        <TextView
            android:id="@+id/aadharLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/lato_bold"
            android:letterSpacing="0"
            android:text="@string/aadhar_card"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
            android:id="@+id/helpIconIV"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/ic_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="4dp"
            android:letterSpacing="-0.01"
            android:text="@string/why_do_we_need_this"
            android:textColor="@color/battle_ship_grey"
            android:textSize="12sp"
            android:fontFamily="@font/lato"
            app:layout_constraintEnd_toStartOf="@+id/helpIconIV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/doYouHaveAadharLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/lato"
            android:letterSpacing="-0.01"
            android:text="@string/do_you_have_aadhar_card"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aadharLabel" />

        <RadioGroup
            android:id="@+id/aadharAvailaibilityOptionRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/doYouHaveAadharLabel">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/aadharYesRB"
                style="@style/Theme.RadioButtonLipstickPink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:letterSpacing="0"
                android:textColor="@color/black"
                android:text="@string/yes_i_have_aadhar_card" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/aadharNoRB"
                style="@style/Theme.RadioButtonLipstickPink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:letterSpacing="0"
                android:text="@string/no_i_don_t_have_aadhar_card" />

        </RadioGroup>

        <include
            android:id="@+id/aadharFrontImageHolder"
            layout="@layout/fragment_verification_image_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/aadharAvailaibilityOptionRG" />


        <include
            android:id="@+id/aadharBackImageHolder"
            layout="@layout/fragment_verification_image_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/aadharFrontImageHolder" />


        <LinearLayout
            android:id="@+id/aadharInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/aadharBackImageHolder">

            <View
                android:id="@+id/topSeaparator"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="22dp"
                android:background="#cdccd1" />

            <LinearLayout
                android:id="@+id/aadharEditLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="-0.01"
                    android:text="@string/please_confirm_the_following_information"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_pencil_edit"
                    android:visibility="gone" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="4dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/aadharCardLayout"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/aadharCardET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Aadhar Card No"
                        android:imeActionLabel="Done"
                        android:imeOptions="actionGo"
                        android:inputType="number"
                        android:maxLength="12"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>


            </RelativeLayout>
        </LinearLayout>


        <com.ncorti.slidetoact.SlideToActView
            android:id="@+id/aadharSubmitSliderBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:border_radius="8dp"
            app:inner_color="#888888"
            app:layout_constraintBottom_toBottomOf="parent"
            app:outer_color="#dddddd"
            app:slider_height="60dp"
            app:slider_icon="@drawable/ic_arrow_forward_white"
            app:slider_icon_color="@color/white"
            app:text="SAVE" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/aadharDataCorrectCB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="18dp"
            android:letterSpacing="0"
            android:fontFamily="@font/lato"
            android:text="@string/yes_i_confirm_the_data_is_correct"
            app:layout_constraintBottom_toTopOf="@id/aadharSubmitSliderBtn"
            app:layout_constraintTop_toBottomOf="@id/aadharInfoLayout"
            app:layout_constraintVertical_bias="0.98"
            tools:layout_editor_absoluteX="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
