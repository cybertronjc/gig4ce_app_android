<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contactItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:paddingStart="16dp"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contact_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:srcCompat="@drawable/ic_user_icon" />

    <View
        android:id="@+id/online_pink_circle"
        android:layout_width="11dp"
        android:layout_height="11dp"
        app:layout_constraintBottom_toBottomOf="@id/contact_image_view"
        app:layout_constraintEnd_toEndOf="@id/contact_image_view"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="10dp" />


    <TextView
        android:id="@+id/tv_timeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/lato"
        android:textColor="@color/gray_chat_module"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="now" />

    <TextView
        android:id="@+id/tv_nameValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/contact_image_view"
        app:layout_constraintEnd_toStartOf="@id/tv_timeValue"
        android:fontFamily="@font/lato"
        android:textColor="@color/black_85"
        android:textSize="16sp"
        tools:text="Rahulxededdeded d Yeadav" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/lato"
        android:layout_marginEnd="16dp"
        android:textColor="@color/gray_chat_module1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/contact_image_view"
        app:layout_constraintTop_toBottomOf="@id/tv_nameValue"
        tools:text="Last messsage that I sent" />



    <View
        android:id="@+id/view_bottomBorder"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_subtitle"
        app:layout_constraintTop_toBottomOf="@id/contact_image_view"
        android:layout_marginStart="18dp"
        android:background="#35BDBDBD" />


</androidx.constraintlayout.widget.ConstraintLayout>