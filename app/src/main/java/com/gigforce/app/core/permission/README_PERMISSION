	@Override
	public void onRequestPermissionsResult(int requestCode,  String[] permissions,  int[] grantResults) {
		super.onRequestPermissionsResult(requestCode, permissions, grantResults);
		if(requestCode== REQ_CODE&& PermissionUtils.permissionsGrantedCheck(grantResults)){
			ShowToast("Permissions Granted");
		}else{
			checkForAllPermissions();
		}
	}
	private void checkForAllPermissions()
	{
		PermissionUtils.checkForPermission(this, REQ_CODE,permissionsRequired);
	}