        RecyclerGenericAdapter<BarMapNameAndValues> recyclerGenericAdapter = new RecyclerGenericAdapter<BarMapNameAndValues>(CurrentActivity.this, new PFRecyclerViewAdapter.OnViewHolderClick<BarMapNameAndValues>() {
            @Override
            public void onClick(View view, int position, BarMapNameAndValues item) {
                openNewFragment(position);
            }
        }, new RecyclerGenericAdapter.ItemInterface<BarMapNameAndValues>() {
            @Override
            public void setItem(BarMapNameAndValues obj, PFRecyclerViewAdapter.ViewHolder viewHolder) {
                ((TextView) viewHolder.getView(R.id.header_data)).setText(getHeaderTitleData(obj.Key) + " : " + obj.Key);
                ((TextView) viewHolder.getView(R.id.value_data)).setText(obj.Value);
                if(colorfulColors.length==listItemPosition)
                listItemPosition=0;
            }
        });
        recyclerGenericAdapter.setList(barMapNameAndValues);
        recyclerGenericAdapter.setLayout(R.layout.chart_deatil_item);
        detailDataLv.setLayoutManager(new LinearLayoutManager(this, LinearLayoutManager.VERTICAL, false));
        detailDataLv.setAdapter(recyclerGenericAdapter);